<% if flash.any? %>
  <% user_facing_flashes.each do |key,value| %>
    <div class="alert alert-<%= flash_class(key) %> alert-dismissible" >
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= value %>
    </div>
  <% end %>
<% end %>
