<div id="flipkart-navbar">
    <div class="container">
        <div class="row row1">
            <ul class="largenav pull-right">
                <li class="upper-links"><a class="links" href= "/products" >产品清单</a></li>
                <% if !current_user %>
                  <li class="upper-links"><a class="links" href="/users/sign_up">注册</a></li>
                  <li class="upper-links"><a class="links" href="/users/sign_in">登入</a></li>
                <% else %>
                    <li class="upper-links dropdown">
                      <a class="links" href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Hi!, <%= current_user.email %>
                        <b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu">
                        <% if current_user.admin? %>
                          <li>
                            <%= link_to("Admin 选单", admin_products_path) %>
                          </li>
                        <% end %>
                        <li>
                           <%= link_to("个人订单列表", account_orders_path ) %>
                        </li>
                         <li> <%= link_to(content_tag(:i, '登出', class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %> </li>
                      </ul>
                    </li>
                  <% end %>
            </ul>
        </div>

        <div class="row row2">
            <div class="col-sm-3">
                <!-- <h2 style="margin:0px;"><span class="smallnav menu" onclick="openNav()">☰ Brand</span></h2> -->
                <h1 style="margin:0px;"><span class="largenav"><a class="links" href= "/"> Super Mario</a></span></h1>
            </div>


                <li class="navbar-form navbar-left" >
                  <div class="form-group">
                  <%= search_form_for @q do |f| %>
                    <%= f.search_field :title_cont, class: 'form-control input-sm', 'datepicker' => true %>
                    <%= f.submit :class => "btn btn-default" %>
                  <% end %>
                  </div>
                </li>



            <div class="cart largenav col-sm-2">
                <a class="cart-button" href="/carts">
                    <svg class="cart-svg " width="16 " height="16 " viewBox="0 0 16 16 ">
                        <path d="M15.32 2.405H4.887C3 2.405 2.46.805 2.46.805L2.257.21C2.208.085 2.083 0 1.946 0H.336C.1 0-.064.24.024.46l.644 1.945L3.11 9.767c.047.137.175.23.32.23h8.418l-.493 1.958H3.768l.002.003c-.017 0-.033-.003-.05-.003-1.06 0-1.92.86-1.92 1.92s.86 1.92 1.92 1.92c.99 0 1.805-.75 1.91-1.712l5.55.076c.12.922.91 1.636 1.867 1.636 1.04 0 1.885-.844 1.885-1.885 0-.866-.584-1.593-1.38-1.814l2.423-8.832c.12-.433-.206-.86-.655-.86 " fill="#fff "></path>
                    </svg> 购物车
                    <span class="item-number "><%= current_cart.products.count %></span>
                </a>
            </div>
        </div>
</div>
