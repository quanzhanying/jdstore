                <li>
                  <%= link_to("Admin Panel", admin_products_path ) %>
                </li>
              <% end %>
              <li>
                <%= link_to("Personal List", account_orders_path ) %>
              </li>
              <li>
                <%= link_to(content_tag(:i, '登出', class: 'fa fa-sign-out'), destroy_user_session_path, method: :get ) %>
              </li>

