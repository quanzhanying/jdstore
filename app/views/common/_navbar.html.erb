              <% Category.all.each do |category| %>
              <li>
                <%= link_to category.name, products_path(category: category.name), class: "link" %>
              </li>
              <% end %>
              <li><%= link_to "全部", products_path, class: "link" %></li>
            </ul>
        </li>
        </div>
