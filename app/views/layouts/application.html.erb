<!DOCTYPE html>
<html>
    <head>
        <title>JDStore </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container">
           <div class="row">
            <%= render "common/navbar" %>
           </div>
           <div class= "body">
            <%= render "common/flashes" %>
            <%= yield %>
          </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
