<!DOCTYPE html>
<html>
    <head>
        <title>Products List</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row">
        </div>

        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
            <li class="active"> <%= link_to("Prouducts List", admin_products_path ) %> </li>
          </ul>
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
            <li class="active"> <%= link_to("Add a product", new_admin_product_path ) %> </li>
          </ul>
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
            <li class="active"> <%= link_to("Users List", admin_users_path ) %> </li>
          </ul>

        </div>


        <div class="col-md-10">
          <%= yield %>
        </div>
        <%= render "common/footer" %>
    </body>
</html>
