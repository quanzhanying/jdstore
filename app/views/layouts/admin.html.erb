<!DOCTYPE html>
<html>
    <head>
        <title>众筹网后台列表</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container-fluid" style="padding: 0px;">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row" style="margin-top: 40px;">
              <div class="col-md-2">
                <ul class="nav nav-pills nav-stacked" style="width: 120px; padding-top:20px; font-size: 15px;">
                   <li class="active"> <%= link_to("发起众筹列表", account_products_path) %> </li>
                   <li class="active"> <%= link_to("支持众筹列表", account_orders_path) %> </li>
                </ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
            </div>
        </div>

        <%= render "common/footer" %>
    </body>
</html>
