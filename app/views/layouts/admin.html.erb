<!DOCTYPE html>
<html>
    <head>
        <title> Admin 后台</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
        <div class="container-fluid">
            <%= render "common/navbar" %>
            <!-- <div class="container"> -->
            <div class="row">
                <div class="col-md-2">
                    <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
                        <li>
                            <%= link_to("Products", admin_products_path, class: "btn btn-info ") %>
                        </li>
                        <li>
                            <%= link_to("Orders", admin_orders_path, class: "btn btn-info ") %>
                        </li>
                        <li>
                            <%= link_to("Categories", admin_categories_path, class: "btn btn-info ") %>
                        </li>
                    </ul>
                </div>
                <div class="col-md-8">
                    <%= yield %>
                </div>
            </div>
            <!-- </div> -->
        </div>
    </body>
</html>
