<!DOCTYPE html>
<html>
  <head>
    <title>一宏工作室 后台</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
      <%= render "common/navbar" %>
      </div>
      <div class="container">
      <div class="row">
        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
            <li> <%= link_to("订单列表", admin_orders_path ) %> </li>
            <li> <%= link_to("模板列表", admin_templates_path ) %> </li>
            <li> <%= link_to("周边列表", admin_products_path ) %> </li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
      </div>
    </div>

    <div class="row">
      <%= render "common/footer" %>
    </div>

  </body>
</html>
