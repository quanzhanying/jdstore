<!DOCTYPE html>
<html>
    <head>
        <title>JDconsole</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container-fluid">


        
            <%= render "common/navbar" %>
            
            <%= render "common/flashes" %>
            <div class="row">
              <div class="col-md-2 sidebar" >
                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                  <li class="active"><%= link_to("商品管理", admin_products_path ) %> </li>
                  <li class="active"><%= link_to("用户管理", admin_users_path ) %> </li>
                  <li class="active"><%= link_to("订单管理", admin_orders_path ) %> </li>

                </ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
        </div>

        <%= render "common/footer" %>
    </body>
</html>