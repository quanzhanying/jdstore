<!DOCTYPE html>
<html>
    <head>
        <title>JDstore 后台</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row">
              <div class="col-md-2">
                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px; font-size: 15px;">
                   <li> <%= link_to("宝贝列表", admin_products_path) %> </li>
                   <li> <%= link_to("买家列表", admin_products_path) %> </li>
                </ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
            </div>
        </div>

        <%= render "common/footer" %>
    </body>
</html>
