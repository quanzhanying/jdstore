<!DOCTYPE html>
<html>
  <head>
    <title>Jostore 后台</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-trcak': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <%= render "common/navbar" %>
      <%= render "common/flashes" %>
      <div class="row">
        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-with: 300px;">
            <li><%= link_to("产品管理", admin_products_path) %></li>
            <li><%= link_to("用户管理", admin_users_path) %></li>
            <li><%= link_to("订单管理", admin_orders_path) %></li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render "common/footer" %>
  </body>
</html>
