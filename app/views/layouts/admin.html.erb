<!DOCTYPE html>
<html>
    <head>
        <title>JDStore 后台</title>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks_track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks_track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
      <%= render "common/navbar" %>
        <div class="container">

            <div class="row">
                <div class="col-md-2">
                    <ul class="nav nav-pills nav-stacked" data-spy="affix" data-offset-top="200" style="max-width: 150px;">
                        <li><%= link_to("Products", admin_products_path) %></li>
                        <li><%= link_to("Orders", admin_orders_path) %></li>
                    </ul>
                </div>
                <div class="col-md-10">
                    <%= yield %>
                </div>
            </div>
        </div>
    </body>
</html>
