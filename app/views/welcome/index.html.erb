<div class="row">
  <%= render :partial => "product_item", :collection => @products, :as => :product %>
</div>
</div>
</section>

<br>

<div class="text-center" style="margin-bottom:-90px;">
  <%= link_to "关于我们" , about_path, :style => "color: black"%>
</div>
