<div class="innercontent">
  <% @products.each do |product| %>
  <div class="col-md-3">
    <div class="thumbnial">
      <%= link_to(product_path(product)) do %>
      <% if product.image? %>
      <%= image_tag(product.image_url(:thumb), alt: "Product Pic") %>
    <% else %>
      <%= image_tag("nopic-thumb.jpg", alt: "No Pic") %>
      <% end %>
      <% end %>
      <div class="caption">
        <h3><%= product.title %></h3>
        <p>&yen;<%= product.price %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
