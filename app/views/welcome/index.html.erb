<div class="row index-web">
<div class="col-md-2 sidenav">
    <img src="https://ooo.0o0.ooo/2017/05/21/592187f12feac.png" alt="logo.png" title="logo.png" class="img-responsive" />
    <br>
    <div class="panel-group text-center">
        <!-- 首页 -->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a href="/">首页</a>
                </h4>
            </div>
        </div>
        <!-- About Us -->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a href="#">ABOUT US</a>
