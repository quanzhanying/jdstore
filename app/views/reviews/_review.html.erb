<% @product.reviews.order("id desc").each do |review| %>
<div class="reviews_wrapper clearfix">
    <div class="pull-left">
        <p><%= review.body %></p>
    </div>
    <div class="pull-right">
      <div class="up">
        发表者：<%= review.user.email %>
      </div>
      <div class="down">
        <p>评论时间：<%= review.created_at.strftime('%Y-%m-%d %H:%M:%S')  %></p>
      </div>
    </div>
    <div>
  </div>
</div>
<% end %>
