<div class="row register">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-user-plus">&nbsp;</span>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, :label => 'email', placeholder: '请输入常用的邮箱地址', error: '请输入邮箱地址',  required: true, autofocus: true %>
          <%= f.input :nickname, label: '昵称', placeholder: '昵称^_^' %>
          <%= f.input :avatar, :label => '选择头像', as: :file %>
          <%= f.input :is_admin, label: false, as: :radio_buttons, collection: [['买家', false], ['卖家', true]], required: true %>
          <%= f.input :password, placeholder: '请输入6-16位密码', error: '请输入6-16位密码', required: true, input_html: { maxlength: 16 }  %>
          <%= f.input :password_confirmation, placeholder: '确认密码', error: '请输入相同的密码', required: true, input_html: { maxlength: 16 }  %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class:"button" %>
        </div>
      <% end %>

      <hr/>
        <div class="account">
          <%= link_to "你有账号？快速登录", new_session_path(resource_name) %><br />
        </div>

    </div>
  </div>
</div>
