<div class="registration">
  <div class="g-row">
  <div class="re-page">
<h2>账号登录</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true,label: "邮箱", placeholder: "邮箱账号" %>
    <%= f.input :password, required: false,label: "密码", placeholder: "输入密码" %>
    <%= f.input :remember_me, label: "记住我", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions ">
    <!-- <%= f.button :submit, "Log in" %> -->
    <input type="submit" name="commit" value="登录"
    class="login-action" data-disable-with="登录">
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
