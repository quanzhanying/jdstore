<div class="row">
   <div class="col-md-6">
      <% if @menu.image.present? %>
         <%= image_tag(@menu.image.medium.url, class: "thumbnail")%>
      <% else %>
         <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail")%>
      <% end %>
   </div>

   <div class="col-md-6">
      <h2><%= @menu.title %></h2>
      <div style="height:100px;">
         <p>
            <%= @menu.description%>
         </p>
      </div>
      <div> 数量: <%= @menu.quantity %></div>
      <div class="menu-price"> ¥ <%= @menu.price %> </div>
      <div class="pull-right">
         <% if @menu.quantity.present? && @menu.quantity >0 %>
            <%= link_to("加入购物车", add_to_cart_menu_path(@menu), :method => :post, :class => "btn btn-primary btn-danger btn-lg")%>
         <% else %>
            已销售空，无法购买
            <% end %>
      </div>
   </div>
</div>

