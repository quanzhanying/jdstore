<h2> 修改个人资料 </h2>
<%= simple_form_for [:account, @user] do |f| %>
<div>
  <%= f.input :username, :label =>"用户名" %>
  <%= f.input :email, :label =>"邮箱地址" %>
  <%= f.input :gender, as: :radio_buttons, collection:  [['男', false], ['女', true]], required: true %>
  <%= f.input :is_fitting, as: :radio_buttons, collection:  [['正在健身', false], ['不在健身', true]], required: true %>
