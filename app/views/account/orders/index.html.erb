<div class="row">
  <div class="col-md-12">
    <h2 class="text-center">My Orders</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="61.8%">#</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to(order.id, order_path(order.token)) %></td>
          <td><%= order.created_at.to_s(:long) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
