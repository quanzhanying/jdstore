<div class="row">
  <div class="col-md-12">

    <h2> 订单列表 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>订单编号</th>
          <th>生成时间</th>
          <th>是否付款</th>
          <th>订单状态</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to(order.token, account_order_path(order.token)) %>
            </td>
            <td>
              <%= order.created_at %>
            </td>
            <td>
              <%= order.is_paid %>
            </td>
            <td>
              <%= order.aasm_state %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
