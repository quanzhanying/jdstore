<h2>订单列表</h2>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>生产时间</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to(order.id, order_path(order.token) )%></td>
      <td><%= order.created_at.to_s(:long) %></td>
    </tr>
    <% end %>
  </tbody>

</table>
