<div class="row">
  <div class="col-md-12">

    <h2>My Orders</h2>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>订单号</th>
          <th>金额</th>
          <th>生成日期</th>
        </tr>
      </thead>
      <tbody>

        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to(order.id, order_path(order.token)) %></td>
              <td><%= order.total %></td>
              <td><%= order.created_at %></td>
          </tr>
        <%  end %>
      </tbody>
    </table>

  </div>
</div>
