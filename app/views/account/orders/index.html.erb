<h2>My Order List</h2>

<br>

<% @orders.each do |order| %>

<div class="panel panel-success">
    <div class="panel-heading">
        Order No.
        <%= "#" %>
        | Total:
        <%= order.total %> RMB
    </div>

    <div class="panel-body">
        <% order.product_lists.each do |product_list| %>
          <%= product_list.product_name %>
          <%= product_list.product_price %> RMB
          <br>
        <% end %>

    </div>
</div>
<% end %>
