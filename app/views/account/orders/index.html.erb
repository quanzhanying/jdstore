<div class="row">
  <div class="col-md-12">

    <h2> 订单明细</h2>

      <% @orders.each do |order| %> <!--可以任意更改，相应的下面也需要改-->
  <span class="btn btn-primary"> <%= order.user.email %></span>
  <div class="pull-left">
    <%= render_order_state(order) %>
  </div>

  <table class="table table-bordered">
      <thead>
        <tr>
          <td>订单号   <%= link_to(order.token , order_path(order.token)) %></td>
          <td>价格</td>
          <td>数量</td>

        </tr>
      </thead>

      <tbody>
        <tr>

      <% order.product_lists.each do |order| %>

        </tr>
        <tr>
          <td>
            <%= order.product_name %>
          </td>
          <td>
            <%= order.product_price %>
          </td>
          <td>
            <%= order.quantity %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
        <div class="total clearfix">
          <span class="pull-right">

        总计 <%= order.total %> RMB
      </span>
    </div>
      <% end %>

  </div>
