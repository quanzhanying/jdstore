<h2>以往订单</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>订单号</th>
      <th>发货地址</th>
      <th>购买总价</th>
      <th>下单时间</th>
      <th>下单状态</th>
      <th>操作</th>

    </tr>
  </thead>
  <tbody>

    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to(order.id, order_path(order.token))%></td>
        <td><%= order.ship_name %>
        <td><%= order.total %></td>
        <td><%= order.created_at%></td>
        <td><%= order.aasm_state %></td>
        <% if order.aasm_state == "paid" or "order_placed" %>
        <td><%= link_to("取消订单", cancelling_account_order_path(order.token), method: :post,class:'btn btn-default btn-sm') %></td>
      </tr>
    <% end %>
    <% end %>

  </tbody>
</table>
