<h1>手冢</h1>

<table class="table table-borded">
  <thead>
    <tr>
      <th> # </th>
      <th width="220">  total price  </th>
      <th> </th>
      <th>  order state </th>
      <th> created_at </th>
      <th width="100"> is_paid </th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
           <%= link_to(order.id, order_path(order.token))  %>
           <% if order.is_applied_cancell%>
             <label class="label label-danger">is applied cancell!!!</label>
           <% end %>
         </td>
        <td> <%= order.total %> </td>
        <td>
          <%= link_to("apply to cancell!!!", apply_for_cancell_account_order_path(order.token), method: :post, class: "btn btn-default") %>
        </td>
        <td> <%= order.aasm_state %> </td>
        <td> <%= order.created_at %> </td>
        <td> <%= order.is_paid %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
