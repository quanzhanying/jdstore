<div class="col-md-12">

  <h2 class="text-center"> My Orders </h2>

  <table class="table">
    <thead>
      <tr>
        <th> Order No. </th>
        <th> Recipient </th>
        <th> Total </th>
				<th> Order Placed </th>
				<th> Status </th>
				<th> Payment Method </th>
				<th colspan = "2"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td> <%= link_to(order.id, account_order_path(order)) %> </td>
          <td> <%= order.shipping_name %> </td>
					<td> <%= order.total %> </td>
					<td> <%= order.created_at %> </td>
					<td> <%= order.aasm_state %> </td>
					<td>
					<% if order.is_paid %>
						<%= order.payment_method %>
					<% else %>
						<%= link_to("Pay Now", order_path(order.token)) %>
					<% end %>
					</td>

					<td><% case order.aasm_state
					when "order_placed"%>
						<%= link_to("Cancel", ask_cancel_order_path(order.token), method: :post, class: "btn btn-sm btn-negative pull-left") %>
					<% when "paid" %>
						<%= link_to("Cancel", ask_cancel_order_path(order.token), method: :post, class: "btn btn-sm btn-negative pull-left") %>
					<% when "shipping" %>
						<%= link_to("Received", user_received_order_path(order.token), method: :post, class: "btn btn-sm btn-negative pull-left") %>
					<% when "shipped" %>
						<%= link_to("Return", user_returns_order_path(order.token), method: :post, class: "btn btn-sm btn-negative pull-left") %>
					<% when "good_returned" %>
						<%= link_to("Returned", "#", class: "btn btn-sm btn-negative pull-left disabled") %>
					<% when "order_cancelled" %>
						<%= link_to("Cancelled", "#", class: "btn btn-sm btn-negative pull-left disabled") %>
					<% end %></td>
	    <% end %>
    </tbody>
  </table>
</div>
