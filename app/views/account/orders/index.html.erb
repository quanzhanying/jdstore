<div class="row">
  <div class="col-md-12">

    <h2> 我的订单</h2>

      <div class="row well">
        <table class="table table-bordered">
          <thead>
            <tr>



              <th>
               商品信息
              </th>
              <th>  总价 </th>
              <th>  是否付款  </th>
              <th>  支付方式  </th>
              <th>  删除订单  </th>
                <th>  申请取消订单  </th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <tr>

              <td>
                <% order.product_lists.each do |product_list| %>
                   <%= product_list.product_name %>;
                <% end %>
              </td>
              <td> <%= order.total  %></td>
              <td> <%= order.is_paid %></td>
              <td> <%= order.payment_method %> </td>
              <td> <%= link_to("Delete", account_order_path(order.id), :method => :delete, :data => { :confirm => "Are you sure?"}) %> </td>
              <td>
                <%#= order.aasm_state%>
              <% if order.aasm_state == 'order_cancelled' %>

                <%= link_to("订单已取消","#",class: "btn btn-primary") %>
                      <% else %>

                <%= link_to("取消订单", cancell_order_account_order_path(order), :method => :post, :data => { :confirm => "Are you sure?"}, :class => "btn btn-danger ") %>

              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>


        </table>
      </div>



  </div>
  </div>
