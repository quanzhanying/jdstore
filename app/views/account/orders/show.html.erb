<div class="row">
  <div class="col-md-12">
    <h2>&nbspOrder Information </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Product</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
          <tr>
            <td>
              <%= product_list.product_name %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Total: <%= @order.total %> RMB
      </span>
    </div>

     <hr>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            Subscriber
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            Consignee
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="group pull-right">
      <%= link_to("Back", account_orders_path, :class => "btn btn-default") %>
      <% if @order.is_paid? %>
          <% if @order.payment_method == 'alipay' %>
          <%= link_to("You have already pay with Alipay", "#", :class => "btn btn-info disabled") %>
          <% else %>
          <% @order.payment_method == 'wechat' %>
          <%= link_to("You have already pay with Wechat", "#", :class => "btn btn-success disabled") %>
          <% end %>
      <% else %>
        <%= link_to("Pay With Alipay", pay_with_alipay_order_path, :method => :post, :class => "btn btn-info") %>
        <%= link_to("Pay With Wechat", pay_with_wechat_order_path, :method => :post, :class => "btn btn-success") %>
      <% end %>

    </div>
  </div>
</div>
