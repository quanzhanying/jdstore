<!-- 评论的表单样式 -->
<%= simple_form_for [@product,@comment] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, :label => "商品评价", placeholder: "请输入商品评价", input_html: { :wrap => :soft, :rows => 2} %>
  </div>

  <div class="form-actions">
    <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "提交。。。"} %>
  </div>
<% end %>
<!-- 评论的表单样式结束 -->
