<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= comment.body %></p>
			<p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.email %></small></p>
		</div>

    	<div class="btn btn-group btn-default pull-right">
		<% if comment.user == current_user -%>
			<%= link_to 'Delete', product_comment_path(@product, comment), method: :delete, data: { confirm: 'Are you sure to delete?' }%>
		<% end %>
	</div>
</div>
