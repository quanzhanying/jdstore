<div class="row">
  <div class="col-md-12">
    <h2>Order details <br>
      <small>
        <%= link_to("Order URL", order_url(@order.token)) %>

      </small>
    </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70%"> Product details</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td> <%= product_list.product_name %></td>
          <td><%= product_list.product_price %></td>
          <td><%= product_list.quantity %></td>
          <td><%= product_list.quantity * product_list.product_price %> </td>

        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total group clearfix">
      <h4 class="pull-right"> Total <%= @order.total %>CNY</h4>

    </div>
    <hr>
    <h2>Shipping details</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td> Order person</td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td> Reciever person</td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>

    </table>
  </div>

</div>
