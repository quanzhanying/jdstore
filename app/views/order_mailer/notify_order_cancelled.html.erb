<div class="row">
  <div class="col-md-12">
    <h2>Cancelled product list</h2>
      <small><%= link_to("Link to the order", order_url(@order.token)) %></small>
    <table>
      <thead>
        <tr>
          <th width="70%">
            Product name
          </th>
          <th>
            Price
          </th>
          <th>
            Quantity
          </th>

        </tr>
      </thead>

      <tbody>
        <% @product_lists.each do |product_list| %>
          <tr>
            <td>
              <%= product_list.product_name %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
            <td>
              <%= product_list.quantity %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        總計 <%= @order.total %> RMB
      </span>
    </div>

     <hr>

     <h2> 寄送資訊 </h2>

     <table class="table table-bordered">
      <tbody>
        <tr>
          <td>
            訂購人
          </td>
          <td>
            订购地址
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %>
          </td>
          <td>
            <%= @order.billing_address %>
          </td>

        </tr>
        <tr>
          <td>
            收件人
          </td>
          <td>
            收件地址
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %>
          </td>
          <td>
            <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>

  </div>

</div>
