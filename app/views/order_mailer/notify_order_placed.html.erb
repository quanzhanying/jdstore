<div class="row">
  <div class="col-md-12">
    <h2>
      订单明细<br>
      <small>
        <%= link_to("订单连接", order_url(@order.token))%>
      </small>
    </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70">商品明细</th>
          <th>商品名称</th>
          <th>单价</th>
          <th>数量</th>
          <th>小计</th>
        </tr>
      </thead>
      <tbody>

        <% @product_lists.each do |product_list| %>
        <tr>
        <td><%= product_list.product_name %> </td>
        <td><%= product_list.product_price %> </td>
        <td><%= product_list.quantity %> </td>
        <td><%= product_list.quantity * product_list.product_price%> </td>
        <% end %>
        </tr>
        <tr>
          <td>总计 <%=@order.total%> RMB </td>
        </tr>
          <!-- <%#= product_list.quantity * product_list.procduct_price ,注解在百分号加%> -->
</table>
  </div>
