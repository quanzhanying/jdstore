
<div class="row">
  <div class="col-md-12">
    <h2>
      <small><%= link_to("订单详情", order_url(@order.token)) %></small>
    </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70%">
            商品明细
          </th>
          <th>
            单价
          </th>
          <th>
            数量
          </th>
          <th>
            小记
          </th>
        </tr>
      </thead>

      <tbody>
        <% @product_lists.each do |product_list| %>
          <tr>
            <td align="center">
              <%= product_list.product_name %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
            <td>
              <%= product_list.quantity %>
            </td>
            <td>
              <%= product_list.product_price * product_list.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</div>
