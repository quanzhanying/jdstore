<div class="row">
  <div class="col-md-6">
    <% if @phone.image.present? %>
      <%= image_tag(@phone.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%- image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @phone.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @phone.description %>
      </p>
    </div>
    <div> 数量 ： <%= @phone.quantity %> </div>
    <div class="phone-price"> ¥ <%= @phone.price %> </div>
    <div class="pull-right">
      <% if @phone.quantity.present? && @phone.quantity > 0 %>
        <%= link_to("加入购物车", add_to_cart_phone_path(@phone), method: :post,
                    class: "btn btn-lg btn-danger") %>
      <% else %>
        已销售一空，无法购买
      <% end %>
    </div>
  </div>
</div>
