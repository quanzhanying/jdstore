<% @carts.each do |cart| %>
<% if cart.id > @max_id %>
    $(".mcart-sigle").append("<%=j render :partial => "cart", :locals => { :cart => cart } %>");
<% else  %>
  $("cart-item-<%= cart.product_id %> .p-price").html("×<%= cart.quantity %>" );
<% end %>
<% sum += cart.quantity %>


<% end %>
$(".p-total b").html("<%= sum %>" );
$(".cw-icon span").html("<%= sum %>" );
