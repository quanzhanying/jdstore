<div class="row">
<div class="col-md-12">
  <h2> Buy list </h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="80%">商品明细 </th>
        <th>单价</th>
        <th>数量</th>
      </tr>
    </thead>
    <tbody>
      <% current_cart.cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
        </td>
        <td>
          <%= cart_item.product.price %>
        </td>
        <td>
          <%= cart_item.quantity %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="total clearfix">
    <span class="pull-right">
      total <%= render_cart_total_price(current_cart) %> CNY
    </span>
  </div>
    <hr>
    <h2> Details for order </h2>
        <div class="order-form">
          <%= simple_form_for @order do |f| %>
              <legend>the order person </legend>
              <div class="form-group col-lg-6">
                <%= f.input :billing_name %>
              </div>
              <div class="form-group col-lg-6">
                <%= f.input :billing_address %>
              </div>

              <legend>the order to person </legend>
              <div class="form-group col-lg-6">
                <%= f.input :shipping_name %>
              </div>
              <div class="form-group col-lg-6">
                <%= f.input :shipping_address %>
              </div>

              <div class="checkout">
                <%= f.submit "order made", class: "btn btn-lg btn-danger pull-right", data: { disable_with: "submitting..." } %>
              </div>

          <% end %>

      </div>
</div>
</div>
