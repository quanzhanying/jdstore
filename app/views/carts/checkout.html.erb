<div class="row">
  <div class="col-md-12">

    <h2> Order Details </h2>

    <table class="table table-bordere">
      <thead>
        <tr>
          <th width="80%">Items</th>
          <th> Price </th>
          <th> Quantity </th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to(cart_item.item.title, item_path(cart_item.item)) %>
            </td>
            <td>
              <%= cart_item.item.price %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Sum RMB ï¿¥<%= render_cart_total_price(current_cart) %>
      </span>
    </div>

    <hr>

    <h2> Order Infomation </h2>

    <div class="order-form">

    <%= simple_form_for @order do |f| %>

        <legend> Billing </legend>
        <div class="form-group col-lg-6">
          <%= f.input :billing_name %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.input :billing_address %>
        </div>

        <legend> Shipping </legend>
        <div class="form-group col-lg-6">
          <%= f.input :shipping_name %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.input :shipping_address %>
        </div>


          <div class="checkout">
            <%= f.submit "Placing order", class:"btn btn-lg btn-success pull-right",
                      data: { disbale_with: "submitting..." } %>
          </div>


        <% end %>
      </div>

  </div>
</div>
