<div class="row">
  <div class="col-md-12">

    <h2> 购物车 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2" align="center">商品资讯</th>
          <th align="center">单价</th>
          <th align="center">数量</th>
          <th align="center">操作</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td align="center">
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td align="center">

            <% if cart_item.quantity == 0 %>
            <%= link_to("-", item_decrease_cart_item_path(cart_item), method: :put, class: "btn btn-xs btn-default pull-left",disabled: "disabled") %>
            <% else %>
              <%= link_to("-", item_decrease_cart_item_path(cart_item), method: :put, class: "btn btn-xs btn-default pull-left") %>
            <% end %>

              <%= cart_item.quantity %>
              <%= link_to("+", item_increase_cart_item_path(cart_item), method: :put, class: "btn btn-xs btn-default pull-right") %>
            </td>
            <td align="center">
            <small><%= link_to("删除", cart_item_path(cart_item), method: :delete,:data => { :confirm => "确定删除该商品?" }) %></small>

              <%#= link_to("删除", cart_item_path(cart_item), method: :delete, class: "btn btn-lg btn-warning pull-right") %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
      <% sum = 0 %>
      <% current_cart.cart_items.each do |cart_item|%>
      <% sum = sum + cart_item.quantity * cart_item.product.price %>
      <% end %>
         <span> 总计 <%= sum %> RMB  </span>
      </span>
    </div>

    <hr>
      
    <div class="checkout clearfix">
      <%= link_to("确认结账", "#", method: :post, class: "btn btn-lg btn-danger pull-right") %>
      <div class="pull-right">&nbsp;</div>
      <%= link_to("清空购物车", clear_cart_carts_path, method: :post, class: "btn btn-lg btn-warning pull-right") %>
    </div>
  </div>
</div>