<div class="row">
  <div class="col-md-12">

    <h2> Your Shopping Cart </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Item Details</th>
          <th>Price</th>
          <th>Quantity</th>
					<th>Action</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= cart_item.quantity %>
            </td>
						<td>
							<%= link_to("Remove Item", cart_item_path(cart_item), class: "btn btn-sm btn-primary",
													method: :delete, data: { confirm: "Are you sure?" } )%>
							<%#= link_to("Remove Item", remove_from_cart_product_path(cart_item.product), method: :post, class: "btn btn-lg btn-primary pull-right") %>
						</td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
         <span>
					Total <%= render_cart_total_price(current_cart) %> RMB
				 </span>
      </span>
    </div>

    <hr>
		<div class="checkout clearfix">
			<% if current_cart.cart_items.any? %>
				<%= link_to("Clear Cart", clear_cart_carts_path, method: :post, class: "btn btn-lg btn-primary pull-right") %>
		    <%= link_to("CHECK OUT", checkout_carts_path, method: :post, class: "btn btn-lg btn-primary pull-right") %>
			<% else %>
				<%= link_to("CART EMPTY", "#", class: "btn btn-lg btn-negative disabled pull-right") %>
			<% end %>
    </div>
	</hr>
	<br>
  </div>
</div>
