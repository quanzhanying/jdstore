<div class="row">
  <div class="col-md-12">
    <h2>购物车</h2>

    <div class="ClearCar">
      <%= link_to("删除所有", cart_item_clear_path(current_cart), method: :post, class: "btn btn-primary btn-lg btn-danger pull-right") %>
    </div>


    <table class="table table_bordered">
      <thead>
        <tr>
          <th cospan="2">图片</th>
          <th>名称</th>
          <th>单价</th>

          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
            <% if cart_item.product.image.present?%>
            <%= image_tag(cart_item.product.image.mini.url, class: "thumbnail")%>
            <% end %>
        <% end %>
          </td>
          <td>
            <%= link_to(cart_item.product.title, product_path(cart_item.product))%>
          </td>
          <td>
            <%= link_to(cart_item.product.price, product_path(cart_item.product))%>
          </td>
          <td>
          <button><%= link_to("+1",cart_item_add_item_path(cart_item), method: :post, class: "btn btn-primary btn-lg btn-danger")%></button>
           <%= cart_item.quantity %>
           <button><%= link_to("-1",cart_item_des_item_path(cart_item), method: :post, class: "btn btn-primary btn-lg btn-danger")%></button>
          </td>
          <td>
            <%= link_to("删除", cart_item_path(cart_item), :method => :delete, :data =>{:confirm => "are you sure?"})%>
            </td>


        </tr>
        <% end %>
      </body>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">
        <span>
          总计<%=render_cart_total_price(current_cart)%>RMB
        </span>
      </span>
    </div>
    <hr>
    <div class="checkout clearfix">
      <%= link_to("确认结账", "#", method: :post, class: "btn btn-lg btn-danger pull-right")%>
    </div>
  </div>
</div>
