<div class="row">
  <div class="col-md-12">
    <%= link_to("清空购物车",clean_carts_path, method: :delete, class: "pull-right",style: "text-decoration: underline;",data:
    { confirm: "Are you sure?"} ) %>

    <h2>购物车</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品咨询</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作选项</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |c| %>
        <tr>
          <td>
            <%= link_to product_path(c.product) do %>
              <% if c.product.image.present? %>
                <%= image_tag(c.product.image.thumb.url,class: "thumbnail")%>
              <% else %>
                <%= img_tag("httl://placehold.it/200*200&text=No Pic", class: "thumbnail")%>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= c.product.price %>
          </td>
          <td>
            <%= c.product.price %>
          </td>
          <td>
            <%= form_for c,url: cart_item_path(c.product_id) do |f| %>
              <%= f.select :quantity, 1..c.product.quantity %>
              <%= f.submit "更新", data: {disable_with: "Submiting..."} %>
              <% end %>
          </td>
          <td>
            <%= link_to cart_item_path(c.product_id),method: :delete do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <span>
          总计 <%= render_cart_total_price(current_cart) %> RMB
        </span>
      </span>
    </div>
    <hr>

    <div class="checkout clearfix">
      <%= link_to("确认结账","#",method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
