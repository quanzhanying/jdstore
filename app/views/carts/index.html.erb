<h2>My Cart</h2>
<table class="table">
  <thead>
    <tr>
      <th>
        Items
      </th>
      <th>
        Title
      </th>
      <th>
        Price
      </th>
      <th>
        Quantity
      </th>
    </tr>
  </thead>

  <tbody>
    <% current_cart.cart_items.each do |cici| %>
    <tr>
      <td>
        <%= link_to product_path(cici.product) do %>
          <%= image_tag(cici.product.image.thumb.url, class: "thumbnail") %>
        <% end %>
      </td>
      <td>
        <%= cici.product.title %>
      </td>
      <td>
        <%= cici.product.money %>
      </td>
      <td>
        <%= cici.quantity %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>

<div class="total clearfix">

  <span class="pull-right">
    <%= render_cart_total_price(current_cart) %> $$

  </span>

  <span class="pull-right">Total:</span>
</div>

<hr>

<div class="checkout clearfix">
  <%= link_to("Confirm", '#', method: :post, class: "btn btn-danger pull-right") %>
</div>
<br>
