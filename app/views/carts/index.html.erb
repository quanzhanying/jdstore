<div class="row">
    <div class="col-md-12">
        <h2>购物车</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2">商品资讯</th>
                    <th>单价</th>
                    <th>数量</th>
                </tr>
            </thead>
            <tbody>

                <% current_cart.cart_items.each do |cart_item| %>
                <tr>
                    <td>
                        <%= link_to product_path(cart_item.product) do %>
                          <% if cart_item.product.image.present? %>
                            <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                          <% else %>
                            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                          <% end %>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>

                    </td>
                    <td>
                        <%= cart_item.product.price %>
                    </td>
                    <td>
                      <%= button_to '-', minus_an_item_cart_path(cart_item), method: :post %>

                        <%= cart_item.quantity %>
                        <%= button_to '+', add_an_item_cart_path(cart_item), method: :post %>

                        <br><%= link_to("delete", delete_item_cart_path(cart_item), method: :post) %>
                    </td>
                </tr>
                <% end %>
            </tbody>

        </table>

        <br>

        <div class="total clearfix">
            <span class="pull-right">
                <span>
                    总计 <%= render_cart_total_price(current_cart) %> RMB
                </span>
            </span>
        </div>

        <hr>
        <div class="checkout clearfix">
            <%# if !@cart.cart_items.quantity  %>
            <%= link_to("确认结账", "#", method: :post, class: "btn btn-lg btn-danger pull-right") %>

            <%# else %>
            <%= link_to("Empty cart", cart_path(current_cart), method: :delete, class: "btn btn-lg btn-info pull-right") %>
            <%# end %>
        </div>
    </div>
</div>
