<div class="row">
  <div class="col-md-12">

    <h2>购物车</h2>

    <%= link_to("清空购物车", empty_cart_path(current_cart), method: :post, data: { confirm: "确定要清空购物车吗？"},
                 class: "pull-right", style: "text-decoration: underline; padding-bottom: 20px") %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>选项</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td><%= cart_item.product.price %></td>
            <td>
              <%= cart_item.quantity %>
              <%= button_to '➕', up_quantity_cart_path(cart_item), method: :post %>
              <%= button_to '➖', down_quantity_cart_path(cart_item), method: :post %>
            </td>
            <td>
                <%= link_to("删除", cart_path(cart_item), method: :delete,
                             data: { confirm: "确定要从购物车中删除这一项吗？"}) %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <span>总计: <%= render_cart_total_price(current_cart) %> RMB</span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("确认结账", "#", method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>

  </div>
</div>
