<div class="row">
  <div class="col-md-12">

    <h2> 购物车 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>编辑</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= cart_item.quantity %>
            </td>
            <td>

              <%= simple_form_for cart_item do |f| %>
              <%= f.input :quantity,:url=>cart_item_change_quantity_path(cart_item), method: :post  %>
              <%= f.submit "更改", data: { disable_with: "Submitting..." }, class:"btn btn-sm btn-primary" %>
              <% end %>

             <%=link_to("删除商品", cart_item_path(cart_item), method: :delete) %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <span>

          总计<%= render_cart_total_price(current_cart) %> RMB

          </span>
      </span>
    </div>

    <hr>


    </div>


    </div>
    <div class="checkout clearfix">
      <%= link_to("清空购物车", cart_path(current_cart), method: :delete, class: "btn btn-xs btn-default ") %>
      <%= link_to("确认结账", "#", method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
