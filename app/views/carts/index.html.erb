<div class="row">
  <div class="col-md-12">

    <h2> shopping cart </h2> <br>

    <%= link_to("清空购物车", clear_cart_path(current_cart), method: :delete, data: {confirm: "are you sure"}, class: "btn btn-lg btn-danger pull-right") %>

    <br><br>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2"> product description </th>
          <th> price </th>
          <th> quantity </th>
          <th> </th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to products_path(cart_item.product) do%>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200X200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <p>
                <%= link_to("-", minus_quantity_cart_item_path(cart_item), method: :post, class: "btn btn-sm btn-info" ) %>
                <%= cart_item.quantity %>
                <%= link_to("+", add_quantity_cart_item_path(cart_item), method: :post, class: "btn btn-sm btn-info" ) %>
              </p>
            </td>
            <td>
              <%= link_to("delete this item", cart_item_path(cart_item), method: :delete, class: "btn btn-default") %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="checkout clearfix">
      <span class="pull-right">
        <span> 总计 <%= render_cart_total_price(current_cart) %> RMB </span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("confirm", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
