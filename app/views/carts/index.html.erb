<div class="row">
  <div class="col-md-12">
    <%= link_to("清空购物车", cleanup_carts_path,
        method: :delete, class: "btn btn-warning pull-right", data: {confirm: "你确定要清空整个购物车吗？"})%>

    <h2> 购物车</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品咨询</th>
          <th width="200px;">单价</th>
          <th width="200px;">数量</th>
          <th >操作选项</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td >
            <%= link_to product_path(cart_item.product) do %>
              <% if cart_item.product.image.present? %>
                <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail")%>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to(cart_item.product.title, product_path(cart_item.product))%>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
          <td>
            <%= link_to cart_item_path(cart_item.product_id), method: :delete do%>
            <i class="fa fa-trash-o"></i>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="total clearfix">
    <span class="pull-right">
      <span style="font-size:16px;">
        <b>
        总计 <%= render_cart_total_price(current_cart)%> RMB
      </b>
      </span>
    </span>
  </div>

  <hr>

  <div class="checkout clearfix">
    <%= link_to("确认结账", "#", method: :post, class: "btn btn-lg btn-danger pull-right")%>
  </div>
</div>
</div>
