<dic class="row">
  <dic class="col-md-12">

    <h2>购物车</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品咨询</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |c| %>
        <tr>
          <td>
            <%= link_to product_path(c.product) do %>
              <% if cart_item.product.image.present? %>
                <%= image_tag(cart_item.product.image.thumb.url,class: "thumbnail")%>
              <% else %>
                <%= img_tag("httl://placehold.it/200*200&text=No Pic", class: "thumbnail")%>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
        </tr>
      </tbody>
    </table>
    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <span>总计xxxRMB</span>
      </span>
    </div>
    <hr>

    <div class="checkout clearfix">
      <%= link_to("确认结账","#",method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </dic>
</dic>
