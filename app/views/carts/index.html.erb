<div class="row">
  <div class="col-md-12">

    <h2> 购物车 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2" >商品描述</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "medium") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "medium") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>

              <div class="btn-group" role="group" aria-label="Basic example">
                  <%= link_to("-1", decream_quantity_cart_item_path(cart_item), method: :post, class: "btn btn-lg btn-default pull-left") %>

                  <input value="<%= cart_item.quantity %>"></input>
                  <%= link_to("+1", incream_quantity_cart_item_path(cart_item), method: :post, class: "btn btn-lg btn-default pull-right") %>

              </div>

            </td>
            
            <td>
              <%= link_to("删除", delete_one_cart_path(cart_item), method: :post, class: "btn btn-lg btn-danger pull-right") %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
         <span> 总计 <%= render_cart_total_price(current_cart) %> RMB</span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">

      <%= link_to("确认结账", "#", method: :post, class: "btn btn-lg btn-primary pull-right") %>
      &nbsp;
      <%= link_to("清空购物车", cart_path(current_cart), method: :delete, class: "btn btn-lg btn-danger pull-right") %>

    </div>
  </div>
</div>
