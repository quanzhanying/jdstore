<div class="row">
  <div class="col-md-12">
    <h2>  购物车 </h2>
    <div class="pull-right">
       <%= link_to("清空购物车",carts_path, method: :delete, class: "btn btn-danger",data: { confirm: "Are you sure?" } ) %>
    </div>
    <br><br>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品咨询</th>
          <th>单价</th>
          <th>数量</th>
          <th>控制选项</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
           <%= link_to product_path(cart_item.product) do %>
            <% if cart_item.product.image.present? %>
              <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
           <% end %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%= button_to '+', up_cart_item_cart_item_path(cart_item), method: :post ,class: "btn btn-sm btn-primary"%>
            <%= cart_item.quantity %>
            <%= button_to '-', down_cart_item_cart_item_path(cart_item), method: :post, class: "btn btn-sm btn-primary"%>
          </td>
          <td>
            <%= link_to("Delete", cart_item_path(cart_item), method: :delete,data: { confirm: "滚啦？" }) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
      <br>
      <div class="total clearfix">
        <span class="pill-right">
        <span>
          总计<%= render_cart_total_price(current_cart) %>RMB
        </span>
        </span>
       </div>

       <hr>
        <div class="checkout clearfix">
          <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
        </div>
    </div>
  </div>
