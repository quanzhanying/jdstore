<div class="row">
  <div class="col-md-12">

    <h2>购物车</h2>

    <div class="delelte clearfix">
      <% if current_cart.cart_items.present? %>
        <%= link_to("清空购物车", delete_products_cart_path(current_cart), method: :delete, class: "btn btn-default") %>
      <% end %>
    </div>

    <br>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>管理选项</th>
        </tr>
      </thead>

      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.picture.present? %>
                  <%= image_tag(cart_item.product.picture.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <%end %>
              <% end %>
            </td>
            <td><%= link_to(cart_item.product.title, product_path(cart_item.product)) %></td>
            <td><%= cart_item.product.price %></td>
            <td><%= cart_item.quantity %></td>
            <td>
              <%= link_to  delete_cart_item_cart_path(cart_item), method: :delete do %>
              <i class="fa fa-trash-o"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <% sum = 0 %>
        总计 <%= render_cart_total_price(current_cart) %> RMB
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("确认结算", '#', method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
