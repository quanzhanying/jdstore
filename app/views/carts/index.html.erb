<div class="row">
  <div class="col-md-12">

    <h2> 购物车 </h2>
    <div class="text-center, pull-right">

    <%= link_to("清空购物车", cart_path(@carts), :method => :delete, class: "btn btn-lg btn-default") %></td>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>数量处理</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to products_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= button_to '+1', up_cart_item_cart_item_path(cart_item),method: :post  %>
              <%= cart_item.quantity %>
              <%= button_to '-1', down_cart_item_cart_item_path(cart_item),method: :post %></td>

            <td>
              <%= link_to("滚蛋", cart_item_path(cart_item), :method => :delete, class: "btn btn-lg btn-default" ) %></td>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <span>

          总计<%= render_cart_total_price(current_cart) %>RMB

        </span>
     </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
