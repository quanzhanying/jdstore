<div class="row">
  <div class="col-md-12">

    <h2>购物车</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>

      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
            <% if cart_item.product.image.present? %>
            <%= image_tag(cart_item.product.image.thumb.url, class:"thumbnail") %>
            <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class:"thumbnail") %>
            <% end %>
            <% end %>
          </td>
          <td>

            <%= link_to(cart_item.product.title,product_path(cart_item.product)) %>
            <%= link_to("删除",cart_cart_item_path(current_cart, cart_item), method: :delete ,class:"btn btn-xs btn-primary") %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <% if cart_item.quantity < cart_item.product.quantity %>
              <%= link_to("+",number_up_cart_path(cart_item),method: :number_up,class:"btn btn-xs btn-danger") %>
                <%= cart_item.quantity %>
              <%= link_to("-",number_down_cart_path(cart_item),method: :number_down,class:"btn btn-xs btn-default") %>
            <% else %>
              <%= link_to("+","#",method: :number_up,class:"btn btn-xs btn-danger disabled") %>
              <%= cart_item.quantity %>
              <%= link_to("-",number_down_cart_path(cart_item),method: :number_down,class:"btn btn-xs btn-default") %>
              <% flash[:warning] = 'Product is not enough' %>
            <% end %>
          </td>
        </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <span>
          总计<%= render_cart_total_price(current_cart) %> RMB
        </span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <% if current_cart.products.count > 0 %>
      <%= link_to("确认结账",checkout_carts_path,method: :post, class:"btn btn-lg btn-danger pull-right") %>
      <%= link_to("清空购物车",destroy_cart_carts_path,method: :delete, class:"btn btn-lg btn-default pull-right") %>
      <% else %>
      <%= link_to("确认结账",checkout_carts_path,method: :post, class:"btn btn-lg btn-danger pull-right disabled") %>
      <%= link_to("清空购物车",destroy_cart_carts_path,method: :delete, class:"btn btn-lg btn-default pull-right disabled") %>
      <% end %>
    </div>
  </div>
</div>
