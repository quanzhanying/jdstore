<div class="row">
  <h2>购物车</h2>

  <div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to("清空购物车", clean_carts_path, method: :delete,
          data: { confirm: "你确定清空购物车吗？"}, class: "btn btn-danger") %>
  </div>

  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product Pic</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作</th>
        </tr>
      </thead>
      <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
              <% if cart_item.product.image.present? %>
                <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td><%= cart_item.product.title %></td>
          <td><%= cart_item.product.price %></td>
          <td>
            <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
              <%= f.select :quantity, [1,2,3,4,5] %>
              <%= f.submit "更新", data: {disable_with: "Submiting..."} %>
            <% end %>
          </td>
          <td>
            <%= link_to cart_item_path(cart_item.product_id), method: :delete do  %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
      <tbody>

      </tbody>
    </table>
  </div>

  <div class="total clearfix">
    <span class="pull-right">

      总计为:<%= render_cart_total_price(current_cart) %>人民币
    </span>
  </div>

  <hr>
  <div class="checkout clearfix" style="padding-bottom: 50px;">
    <%= link_to("结算金额", '#', method: :post, class: "btn btn-danger pull-right") %>
  </div>
</div>
