<td>
  <!-- 减少数量按钮 -->
  <%= link_to("-", decrease_cart_item_path(cart_item.product_id), method: :post, :remote => true) %>
  <!-- 数量显示 -->
  <!-- <input type="text" name="quantities[]" value="<%= cart_item.quantity == 0 ? '已售罄' : cart_item.quantity %>" id="quantity-input-<%= cart_item.product_id %>" class="quantity-input" disabled> -->
  <span id = "quantity-input-<%= cart_item.product_id%>"> <%= cart_item.quantity %> </span>
  <!-- 增加数量按钮 -->
  <%= link_to("+", increase_cart_item_path(cart_item.product_id), method: :post, :remote => true) %>
