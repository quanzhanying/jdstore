<div class="row">
  <div class="col-md-6">
    <% if @book.image.present? %>
      <%= image_tag(@book.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%- image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @book.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @book.description %>
      </p>
    </div>
    <div> 数量 ： <%= @book.quantity %> </div>
    <div class="book-price"> ¥ <%= @book.price %> </div>
    <div class="pull-right">
      <% if @book.quantity.present? && @book.quantity > 0 %>
        <%= link_to("加入购物车", add_to_cart_book_path(@book), method: :post,
                    class: "btn btn-lg btn-danger") %>
      <% else %>
        已销售一空，无法购买
      <% end %>
    </div>
  </div>
</div>
