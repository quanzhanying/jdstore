<h2 style="text-align:center;"> Items List </h2>

<table class="table table-boldered">

    <% @items.each do |item| %>

      <% if item.is_available %>

        <tr>

          <td>
            <%= item.attachment %>
          </td>

          <td>
            <%= link_to(item.title, item_path(item)) %>
          </td>

          <td>
            <%= item.price %>
          </td>


          <td>
            <%= item.created_at %>
          </td>
        </tr>
      <% else %>

      <% end %>
    <% end %>
</table>
