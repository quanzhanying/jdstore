<div class="row">
  <div class="col-md-12">
    <div>
      <h2 class="pull-left"> 訂單明細 </h2>
      <%= render_status_in_show(@order) %>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明細</th>
          <th>單價</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>

        <% @item_lists.each do |item_list| %>
          <tr>
            <td>
              <%= item_list.item_name %>
            </td>
            <td>
              <%= item_list.item_price %>
            </td>
            <td>
              <%= item_list.quantity %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        總計 <%= @order.total %> RMB
      </span>
    </div>

     <hr>

     <h2> 寄送資訊 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            訂購人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>