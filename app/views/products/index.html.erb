<!-- 每个品牌信息展示区分区域開始 -->
<% if @brand_id == 1 %>
  <%= render :partial => "products/HAY" %>
<% elsif @brand_id == 2 %>
  <%= render :partial => "products/GUBI" %>
<% elsif @brand_id == 3 %>
  <%= render :partial => "products/MENU" %>
<% elsif @brand_id == 4 %>
  <%= render :partial => "products/muuto" %>
<% elsif @brand_id == 5 %>
  <%= render :partial => "products/STUA" %>
<% elsif @brand_id == 6%>
  <%= render :partial => "products/ferm_living" %>
<% else %>
  <!-- 所處位置導航列開始 -->
  <ul class="breadcrumb">
    <li><a href="/">首页</a></li>
    <li class="active">全品项商品首页</li>
  </ul>
  <!-- 所處位置導航列結束 -->
  <!-- 活動廣告區域開始 -->
  <%= render :partial => "products/ad" %>
  <!-- 活動廣告區域結束 -->
  <!-- 区域： 最新商品区域開始 -->
  <div id="products_new">
    <!-- 所處位置導航列開始 -->
    <ul class="breadcrumb">
      <li><a href="/products">最新商品</a></li>
      <li><a href="/products?category=椅子">椅子</a></li>
      <li><a href="/products?category=桌子">桌子</a></li><br />
      <li><a href="/products?category=凳子">凳子</a></li>
      <li><a href="/products?category=沙发">沙发</a></li>
    </ul>
    <!-- 所處位置導航列結束 -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1", style="margin-bottom: -18px;" >
        <div class="order clearfix", style="color: #ffffff;
            background-color: #439a46;">
          <p class="title">最新到货</p>
        </div>
      </div>
    </div>
    <div class="row", style="margin-top: -5px;">
      <div class="col-md-10 col-md-offset-1", style="margin-bottom: -18px;" >
        <div class="productList-wrap">
          <ul class="productList clearfix">
          <% @new_products.each do |product| %>
            <%= render :partial => "product-list", :locals => { :product => product } %>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- 区域： 最新商品区域结束-->

  <!-- 区域： 活动商品区域開始 -->
  <div id="products_promotive">
    <!-- 所處位置導航列開始 -->
    <ul class="breadcrumb">
      <li><a href="/products">活动商品</a></li>
      <li><a href="/products?category=椅子">椅子</a></li>
      <li><a href="/products?category=桌子">桌子</a></li><br />
      <li><a href="/products?category=凳子">凳子</a></li>
      <li><a href="/products?category=沙发">沙发</a></li>
    </ul>
    <!-- 所處位置導航列結束 -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1", style="margin-bottom: -18px;" >
        <div class="order clearfix", style="color: #ffffff;
            background-color: #ff9800;">
          <p class="title">2017初夏轻色</p>
        </div>
      </div>
    </div>
    <!-- 区域： 活动商品区域 -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1", style="margin-bottom: -18px;" >
        <div class="productList-wrap">
          <ul class="productList clearfix">
            <% @promotive_products.each do |product| %>
              <%= render :partial => "product-list", :locals => { :product => product } %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- 区域： 活动商品区域结束-->

  <!-- 所處位置導航列開始 -->
  <ul class="breadcrumb">
    <li><a href="/products">全品项商品</a></li>
    <li><a href="/products?category=椅子">椅子</a></li>
    <li><a href="/products?category=桌子">桌子</a></li>
    <li><a href="/products?category=凳子">凳子</a></li>
    <li><a href="/products?category=沙发">沙发</a></li>
  </ul>
  <!-- 所處位置導航列結束 -->
<% end %>
<!-- 每个品牌信息展示区分区域结束 -->

<div id="products_all">
<!-- 商品排序显示页面显示部分 -->
<div class="row">
  <div class="col-md-10 col-md-offset-1", style="margin-bottom: -18px;" >
    <div class="order clearfix">
      <p class="title">商品排序 | </p>
      <ul class="orderList">
        <li class="orderList-orderItem <%= 'orderList-activeItem' if !params[:order] %>"><%= link_to("新品", products_path) %></li>
        <li class="orderList-orderItem <%= 'orderList-activeItem' if params[:order] == 'by_product_stock' %>"><%= link_to("销量", products_path(:order => "by_product_stock")) %></li>
        <li class="orderList-orderItem <%= 'orderList-activeItem' if params[:order] == 'by_product_price' %>"><%= link_to("价格", products_path(:order => "by_product_price")) %></li>
      </ul>
    </div>
  </div>
</div>
<!-- 商品排序显示页面部分结束 -->
<!-- 商品展示列表開始 -->
<div class="row">
  <div class="col-md-10 col-md-offset-1", style="margin-bottom: -18px;" >
    <div class="productList-wrap">
      <ul class="productList clearfix">
        <%= render :partial => "products/list" %>
      </ul>
      <div class="text-center">
        <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
      </div>
    </div>
  </div>
</div>
<!-- 商品展示列表结束 -->
</div>

