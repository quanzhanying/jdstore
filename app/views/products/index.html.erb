<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://www.hermanmiller.com/content/dam/hermanmiller/page_assets/products/Aeron_Chairs/features_slide_aeron_chair_10b.jpg", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> ï¿¥ <%= product.price %>
    </div>
  <% end %>
</div>
