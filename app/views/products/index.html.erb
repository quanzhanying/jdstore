<div class="row">
  <% @products.each do |product| %>

      <div class="col-md-4">
        <div class="thumbnail">
          <img src="<%= product.image.thumb %>" alt="No Picture">
          <div class="caption">
            <h3><%= link_to(product.title, product_path(product)) %></h3>
            <p><%= product.description %></p>
            <p><a href="#" class="btn btn-primary" role="button">Buy</a>
              <a href="#" class="btn btn-default" role="button">Like</a></p>
          </div>
        </div>
      </div>

  <% end %>

</div>
