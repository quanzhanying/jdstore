<div class="pull-right">
  <%= link_to("Add a product", new_product_path, :class => "btn btn-default" ) %>
</div>
<table class="table table-boldered">
  <% @products.each do |product| %>
  <tr>
    <td>
      <%= link_to(product.title, product_path(product)) %>
    </td>
    <td>
      <%= link_to(product.description, product_path(product)) %>
    </td>
    <td>
      <%= link_to(product.quantity, product_path(product)) %>
    </td>
    <td>
      <%= link_to(product.price, product_path(product)) %>
    </td>

    <td>
      <%= product.created_at %>
    </td>
  </tr>
  <% end %>
</table>
