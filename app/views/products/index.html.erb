<div class=”container”>
  <div class="row">
    <div class="col-md-1" style="background-color:default;"></div>
      <% @products.each do |product| %>
        <div class="col-md-2 col-sm-4">
          <!--span class="thumbnail"-->
            <%= link_to product_path(product) do %>
              <% if product.image.present? %>
                 <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
              <% else %>
                 <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
             <h4><%= product.title %></h4>
             <!--评星系统div class="ratings">
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star-empty"></span>
             </div-->
             <!--商品介绍内容p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. </p-->
             <hr class="line">
             <div class="row">
                <div class="col-md-6 col-sm-6">
                  <div class="product-price"> ￥ <%= product.price %> </div>

                </div>
                <div class="col-md-6 col-sm-6">
                   
                   <% if product.quantity.present? && product.quantity > 0 %>
                     <%= link_to("BUY ITEM", add_to_cart_product_path(product), :method => :post, :class => "btn btn-success right") %>
                   <% else %>
                     已销售一空，无法购买
                   <% end %>
                </div>
             </div>
          <!--/span-->
        </div>
      <% end %>
    <div class="col-md-1" style="background-color:default;"></div>
  </div>
</div>
