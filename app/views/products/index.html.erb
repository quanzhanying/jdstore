    <div class="well col-sm-6 col-md-3">


           <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
        <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
            <% end %>
            <div class="caption">
                <h3 class="text-center"><%= product.title %></h3>
                <p class="text-center">
                    <%= link_to("我要看", product_path(product), class: "btn btn-default") %>

                    <%= link_to("我要买",add_to_cart_product_path(product), method: :post, class: "btn btn-default") %>

                </p>
            </div>


    </div>
    <% end %>

</div>
