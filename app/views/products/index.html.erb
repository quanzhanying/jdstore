      <% if product.image? %>
        <%= image_tag(product.image.thumb.url,class: "thumbnail") %>
      <% else %>
        <image src="http://andresgaleano.eu/wp-content/uploads/2015/09/No-I-mage-Available.gif", width="200", class="thumbnail">
      <% end %>
        <div class="caption">
          <h3><%=product.title%></h3>

            <%= link_to("look", product_path(product), class:"btn btn-danger")%>
            <%= link_to("加入购物车", add_to_cart_product_path(product), :method => :post, :class => "btn btn-primary btn-danger")%>


        </div>
      </div>
    </div>
