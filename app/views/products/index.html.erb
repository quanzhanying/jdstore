<table class="table table-bordered">
  <thead>
    <tr>
     <td>品名</td>
     <td>介绍</td>
     <td>价格</td>
     <td>库存</td>
     <td>创建时间</td>
    </tr>
  </thead>

  <% @products.each do |product| %>
  <tr>
    <td>
      <%= product.name %>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= product.amount %>
    </td>
    <td>
      <%= product.created_at %>
    </td>
  </tr>
  <% end %>
</table>
