<!-- 全商品列表的的navbar -->
<div class="header_placeholder h80"></div>
<div class="header">
  <div class="header_content clearfix">
    <div class="logo1"><%=link_to("Select.", products_path)%></div>
    <div class="search_bar1">
      <%= form_tag search_products_path , :method => :get do %>
        <div class="input-group" id="search-id" >
          <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="请输入商品信息">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="fa fa-search" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
    <div class="cart-wrap1">
      <div class="cart">
      	<%= link_to carts_path do %>
          <i class="fa fa-shopping-cart cart-icon f16 mr10 tc"></i>我的购物车
          <span class="products_count"><%= current_cart.products.count %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- 全商品列表的navbar结束 -->

<!-- 在商品列表中增加分类显示的按钮 -->

<div class="row">
  <% if params[:controller] == ('products') && params[:action] == ('show') %>
    <div class="menu-wrap">
      <ul class="menuList">
        <li class="menuList-item">
          <%= link_to("首页", products_path)%>
        </li>
        <% Category.all.each do |category| %>
          <li class="menuList-item <%= 'menuList-activeItem' if @product.category.name == category.name %>">
            <%= link_to category.name, products_path(category: category.name), class: "link" %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="menu-wrap">
      <ul class="menuList">
        <li class="menuList-item <%= 'menuList-activeItem' if !params[:category] %>">
          <%= link_to("首页", products_path)%>
        </li>
        <% Category.all.each do |category| %>
          <li class="menuList-item <%= 'menuList-activeItem' if params[:category] == category.name %>">
            <%= link_to category.name, products_path(category: category.name), class: "link" %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<!-- 分类显示按钮结束 -->
