<div class="row">
    <% @products.each do |product| %>
  <div class="col-sm-6 col-md-4">

    <div class="thumbnail">

      <% if product.image.present? %>

       <%= link_to( image_tag( product.image.thumb.url ),product_path(product)) %>

      <% else %>
        <%=link_to(image_tag("http://placehold.it/200x200&text=No Pic"),product_path(product) )%>
      <% end %>

      <div class="caption">
        <%= product.title %>
        <p><%= product.description %></p>
        <p><%= product.price %></p>
        <p><a href="#" class="btn btn-primary" role="button">购买</a>
          <a href="#" class="btn btn-default" role="button">加到购物车</a></p>
      </div>
    </div>

  </div>
  <% end %>
</div>
