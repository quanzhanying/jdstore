<div class="jumbotron">
    <h1 class="title">We Are Different</h1>
    <p class="slogan">
    <br>
    We are a new stratum.
    <br>

    </p>
    <p class="lead"><a class="btn btn-lg btn-danger" href="/products">Come On</a></p>
  </div>



<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> ï¿¥ <%= product.price %>
    </div>
  <% end %>
</div>
