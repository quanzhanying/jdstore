<div class="pull-right">
  <%= link_to("Add a product", new_product_path, :class => "btn btn-default") %>
</div>

<br><br>
<table class="table table-boldered">
  <% @products.each do |product| %>
  <tr>
    <td>
      <%= link_to(product.title, product_path(product)) %>
    </td>
    <td>
      <%= product.quality %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= link_to("Edit", edit_product_path(product)) %> |
      <%= link_to("Destroy", product_path(product), :method => :delete, :data => {:confim => "Are you sure?"}) %>
    </td>
    <td>
      <%= product.created_at %>
    </td>
  </tr>
  <% end %>
</table>
