<div class="center">
  <div class="row">
		<% @products.each do |product| %>
			<div class="col-md-3 col-xs-6">
	 		<div class="thumbnail" >
				<%= image_tag (product.image.thumb.url) %>
					<!-- <div class="caption"> -->
						<h3><%= link_to(product.title, product_path(product)) %></h3>
						<p><%= number_to_currency(product.price) %></p>
			</div>
			</div>
			<!-- </div> -->
		<% end %>
		</div>
	</div>
