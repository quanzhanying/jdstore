<div>
  <br>
<% if @query_string.blank? %>
    <div class="search-info-title">
      Sorry, The search content cannot be blank, please type some product into to search.
    </div>

  <% elsif @products.blank? %>
    <br>
    <h2 class="search-info-title"> Sorry, we don't have product you would like to search</h2>
  <% else %>
        <ul class="productList clearfix pb20">
        <% @products.each do |product| %>
          <li class="fl productList-item p15 pr">
            <p class="productList-item-pic w200 h200">
            <%= link_to product_path(product) do %>
              <%= image_tag(product.image.thumb.url, class: 'thumbnail')%>
            <% end %>
            </p>
          </li>
        <% end %>
       </ul>
  <% end %>
</div>
