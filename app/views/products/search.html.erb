<div class="products-1 search-page">
  <div class="col-md-10 col-md-offset-1">
    <%= render "common/flashes" %>
  </div>
  <!-- <h3 class="introduction">品味伴客</h3>
  <h3 class="introduction-sub">找到属于你的那一份</h3> -->
  <hr>
  <div class="row hot-products">
    <% if @products.present? %>
      <h5 class="collection">已为您找到<%= @products.count %>个宝贝</h5>
      <div id="pins" class="transitions-enabled">
        <%= render :partial => "product_items", :collection => @products, :as => :product %>
      </div>
    <% else %>
      抱歉，没找到您要的商品。
    <% end %>
  </div>
</div>
