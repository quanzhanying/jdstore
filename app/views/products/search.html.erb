
<% if @products.blank?%>
<div class="container">
  <div class="row">
<br>
<br>

  <p class="text-center">抱歉！没有搜索到结果！</p>

</div>
</div>
<% else %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="order" onselectstart="return false">
        <div class="col-md-8">
          <a href="<%= search_products_path + "?utf8=✓&q=" + params[:q] + "&order=hot"%>" class="<%= if !params[:order].blank? && params[:order] == "hot" then "click" end%>"><span class="fa fa-long-arrow-down" aria-hidden="true">&nbsp;热门</span></a>
          <a href="<%= search_products_path + "?utf8=✓&q=" + params[:q] + "&order=new"%>" class="<%= if !params[:order].blank? && params[:order] == "new" then "click" end%>"><span class="fa fa-long-arrow-down" aria-hidden="true">&nbsp;新品</span></a>
          <a href="<%= search_products_path + "?utf8=✓&q=" + params[:q] + "&order=sale"%>" class="<%= if !params[:order].blank? && params[:order] == "sale" then "click" end%>"><span class="fa fa-long-arrow-down" aria-hidden="true">&nbsp;销量</span></a>
          <a href="<%= search_products_path + "?utf8=✓&q=" + params[:q] + "&order="+ if !params[:order].blank? && params[:order] == "price" then "price-down" else "price" end%>" class="
            <% if !params[:order].blank? %>
           <%=if params[:order] == "price-down" || params[:order] == "price" then "click-price" end%>
          <% end %>
          "><span class="fa fa-long-arrow-<%= if !params[:order].blank? && params[:order]=="price" then "up" else "down" end%>" aria-hidden="true">&nbsp;价格</span></a>
            <a href="<%= search_products_path + "?utf8=✓&q=" + params[:q] + "&order=review"%>"  class="<%= if !params[:order].blank? && params[:order] == "review" then "click" end%>"><span class="fa fa-long-arrow-down" aria-hidden="true">&nbsp;评价数</span></a>
        </div>
        <div class="text-right">
          <span>
            共<%= @products.count %>件商品
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">




  <div class="search-result">
    <div class="product-list">
      <ul>
        <% @products.each do |product| %>
        <li>
          <div class="product-price">
            <%= link_to(image_tag(img430(product,1), class: 'product-img'), product_path(product)) %>
              <p class="price">￥<%= product.promotional %></p>
              <p class="describe"><%= product.title %></p>
              <p class="evaluate">已有<%= product.reviews.count%>条评价</p>
              <div class="cart text-center">
                <% if current_user %>
                  <% if current_user.is_favorite_of?(product) %>
                <%= link_to(content_tag(:i,' 已收藏', class: 'fa fa-heart'), favorite_product_path(product)+"?fa=unfavorite-p", :method => :post,:remote => true,id:  "favorite-item-"+product.id.to_s) %>
                 <% else %>
                <%= link_to(content_tag(:i,' 收藏', class: 'fa fa-heart-o'), favorite_product_path(product)+"?fa=favorite-p", :method => :post,:remote => true,id:  "favorite-item-"+product.id.to_s) %>
                  <% end %>
                <% else %>
                  <a href="#" data-toggle="modal" data-target="#login-modal"><i class="fa fa-heart-o"> 收藏</i></a>
                <% end %>
              </div>
              <div class="shopCart cart text-center">
                <%= render :partial => "products/add_to_cart", :locals => { :product => product } %>
              </div>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="text-center">
      <%= will_paginate @products %>
    </div>

<% end %>
