
<div class="container-fluid">
  <br>
    <% if @query_string.blank? %>
      <div class="search_info_title">
      <h2> 搜索信息不能为空，请输入关键字搜索 </h2>

    <% elsif @products.blank? %>
      <br>
      <h2 class="search-info-title"> 很抱歉，没有找到您要的信息...... </h2>
    <% else %>
      <h2 class="search-info-title"> 关于"<%= @query_string %>"的商品讯息 </h2>
      <div class="search-result">

      <div class="row products-show"></div>
      <div class="product-table">
          <% @products.each do |product| %>
          <div class="row products-show1">

            <div class="col-md-12 col-lg-9 col-lf-offset=1">

              <div class="pull-right">
                  发布时间: <%= product.created_at.to_date %>
              </div>
              <p> <%= link_to(render_highlight_content(product,@query_string), product_path(product)) %> </p>

            </div>
          </div>
          <% end %>
      </div>
  </div>

  <div class="text-center">
    <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
  </div>

<% end %>
</div>
