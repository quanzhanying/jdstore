<div class="col-md-4 col-md-offset-4">
<%= simple_form_for @product do |f| %>

<div class="form-group">
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :quantity %>

  <% if @product.picture.present? %>
   <span>目前商品图</span> <br>
   <%= image_tag(@product.picture.thumb.url) %>
  <% end %>

  <%= f.input :picture, :as => :file %>
  <%= f.input :is_hidden %>

</div>

<div class="form-actions">
  <%= f.submit "Submit", data: { disable_with: "Submitting..."} %>
<div>
<% end %>
</div>
