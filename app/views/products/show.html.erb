<div class="row">
  <div class="col-sm-12 col-md-4 col-lg-4">
    <div class="thumbnail">
      <%= image_tag @product.image.medium || "avatar.jpg", {alt: "pic", style: "max-width:100%;max-height:100%"} %>
    </div>
  </div>
  <div class="col-sm-12 col-md-4 col-md-offset-2 col-lg-4 col-lg-offset-2">
    <div>
      <h3><%= @product.title %></h3>
      <p>
        quantity: <span><%= @product.quantity %></span>
      </p>
      <p>
        price: $ <span><%= @product.price %></span>
      </p>
      <% if @product.quantity > 0  %>
        <%= link_to("add to car", add_to_cart_product_path, method: :post, class: "btn btn-danger") %>
      <% else %>
        <button type="button" name="button" class="btn btn-default" disabled= "disabled">Sold Out</button>
      <% end %>
    </div>
  </div>

</div>
