<div class="row">

  <div class="col-sm-6 col-md-4">

    <div class="thumbnail">

      <% if @product.image.present? %>
       <%=image_tag( @product.image.medium.url )%>

      <% else %>
        <%=image_tag("http://placehold.it/200x200&text=No Pic") %>
      <% end %>

      <div class="caption">
        <%= @product.title %>
        <p><%= @product.description %></p>
        <p><%= @product.price %></p>
        <p><a href="#" class="btn btn-primary" role="button">购买</a>
          <a href="#" class="btn btn-default" role="button">加到购物车</a></p>
      </div>
    </div>

  </div>

</div>
