<div class="row">
<div class="col-md-6">
  <% if @product.image.present? %>
    <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
  <% else %>
    <%= image_tag(url_to_image("NoPic"), class: "thumbnail") %>
  <% end %>
</div>

<div class="col-md-6">
  <h2> <%= @product.title %> </h2>

  <p>
    商品描述：<%= simple_format(@product.description) %>
  </p>

  <p>
    价格：<%= @product.price %>
  </p>

  <p>
    库存：<%= @product.quantity %>
  </p>
  <br />
  <% if @product.quantity.present? && @product.quantity > 0 %>
    <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-danger") %>
  <% else %>
    已销售一空，无法购买
  <% end %>
</div>
</div>
