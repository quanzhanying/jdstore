
<div class='row product-box product-show'>

  <div class="col-sm-5 col-sm-offset-1 col-xs-10 col-xs-offset-1 product-image">

  <!-- 显示多张图片 -->
    <% if @product_images.present? %>
    <div class="col-md-12 ">
        <%= image_tag(@product_images.first.image.large.url , class: 'main-image thumbnail')%>
      </div>
      <% @product_images.each_with_index do |p| %>
      <div class="col-xs-4 col-sm-2 col-md-2 image-box">
          <%= image_tag(p.image.small.url,class: 'list-image thumbnail') %>
        </div>
      <% end %>

    <% else %>
        <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>

  </div>


  <div class="col-sm-3 col-sm-offset-0 col-xs-10  col-xs-offset-1 product-detail">
   <div>


    <h2> <%= @product.title %> </h2>
    <div class="product-price"> <span class="currency_symbol">￥</span><%= @product.price %> </div>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div> 库存: <%= @product.quantity %> </div>


  </div>
      <hr />
      <div >

      <% if @product.quantity.present? && @product.quantity > 0 %>
      <%= link_to("加入购物车", add_to_cart_product_path(@product), :method => :post, :class => "buy_button") %>
      <% else %>
         已销售一空，无法购买
      <%end%>

    </div>

  </div>
</div>
