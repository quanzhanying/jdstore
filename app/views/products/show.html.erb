<div class="col-md-6">

   <div style="float:left;">
		 <div class="thumbnail" >
			 <p>
			   <!-- <strong>Image:</strong> -->
			   <%= image_tag @product.image.medium.url %>
			 </p>
	 	</div>
	 </div>
</div>

		 <h2> <%= @product.title %> </h2>

		 <p><strong>Description: </strong><%= simple_format(@product.description) %></p>
		 <p><strong>Quantity: </strong><%= @product.quantity %></p>
		 <p><strong>Price: </strong>$<%= @product.price %></p>

		 <br>
		 <div>
			<% if @product.quantity <= 0 %>
			<%= link_to("Sold Out", "#", :class => "btn btn-primary disabled ") %>
			<% else %>
		 	<%= link_to("Add to Cart", add_to_cart_product_path(@product), :method => :post, :class => "btn btn-primary btn-lg btn-danger") %>
			<% end %>
		 </div>
