<br>

<div class="container">

	<div class="col-md-3">
		<%= render partial: "common/product_image", locals: {product: @product, size: "medium", only_image: true} %>	
	</div>

	<div class="col-md-4 col-md-offset-2">
		<h2><%= simple_format(@product.title) %></h2>	
		<br>
		<h3>库存</h3><%= @product.quantity %>
		<h3>描述</h3><%= simple_format(@product.description) %>
		<br><br>
		<%= render "common/add_to_cart_button" %>
	</div>

	<div class="col-md-3">
		<h3>其他类似产品</h3>
		<br>
		<div class="row">
			<% @other_products.each do |other_product| %>
			<div class="col-md-12">

				<%= render partial: "common/product_image", locals: {product: other_product, size: "thumb"} %>

				<% if false %>
					<% if other_product.image.present? %>
						<%= link_to image_tag(other_product.image.url(:thumb)), product_path(other_product) %>
					<% else %>
						<%= link_to image_tag($DEFAULT_THUMB_IMAGE), product_path(other_product) %>
					<% end %>
				<% end %>

				
				<br>	
				<%= link_to "#{other_product.title}", product_path(other_product) %>
				<br>
				<%= other_product.price %>
			</div>
			<% end %>
		</div>

	</div>

</div>



