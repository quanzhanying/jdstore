<div class="row">
  <div class="col-md-6">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class:"thumbnail")%>
    <% else %>
      <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h1><%= @product.title %></h1>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div>数量:<%= @product.quantity%></div>
    <div>价格:<%= @product.price %></div>
    <div class="pull-right">
      <% if @product.quantity > 0 %>
      <!-- @product.quantity.present?  -->
        <%= link_to("加入购物车", add_to_cart_product_path(@product), :method => :post, class:"btn btn-lg btn-danger")%>
      <% else %>
        <%= link_to("此货物已经卖光", class: "btn btn-lg btn-default")%>
      <% end %>

    </div>
  </div>
</div>
