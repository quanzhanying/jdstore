<div class="row">
  <div class="col-md-6">
    <% if @product.image.present? %>
       <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
     <% else %>
       <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
     <% end %>
   </div>
   <div class="col-md-6">
      <h3><%= @product.title %></h3>
      <p style="line-height:50px;"><b>商品描述： </b><%= @product.description %>
      <br/>
      <b>商品库存： </b><%= @product.quantity %>
      <br/>
      <b>商品价格： </b><%= @product.price %>
    </p>
  </div>
  <div class="pull-right" style="margin-right:30px;">
    <%= link_to("加入购物车", add_to_cart_product_path(@product),:method => :post, :class => "btn btn-primary btn-danger")%>
  </div>
</div>
