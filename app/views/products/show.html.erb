<div class="row">
  <div class="col-md-6">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class:"thumbnail") %>
      <% else %>
      <%= image_tag("http://placehold.it/400x400?text=商品无图", class:"thumbnail") %>
      <% end %>
    </div>

  <div class=" col-md-6">
     <h2><%= @product.title %></h2>
     <br><br>
     <div style="height:100px;">
       <p>
         <%= @product.description %>
       </p>

     </div>
     <div>
     <strong>只剩下</strong> <%= @product.quantity %>件
     </div>

     <div class="product-price">
       <strong>仅需</strong><%= @product.price %>元

     </div>


  </div>
</div>
