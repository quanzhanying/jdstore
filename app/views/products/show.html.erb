
<div class="col-md-12">
  <div class="row">
    <div class="col-sm-1 col-md-1" ></div>
    <div class="col-sm-10 col-md-10" >
      <!-- <div class="showproduct"> -->
        <div class="thumbnail showproduct-bg" >
          <!-- <img src="..." alt="..."> -->
          <div class="caption showproduct-font" >
            <div class="media-left">
              <%= image_tag @product.image.medium %>
            </div>

            <div class="media-body">
              <div style=" margin-left: 30px">
                  <h2 class="media-heading"><%= @product.title %></h2>
                  Description: <br/>
                  <p style="height:60px">
                    <%= @product.description%>
                  </p>
                  Quantity: <%= @product.quantity %> |
                  Price: ¥ <%= @product.price %><br/>
                  <%= link_to("加入购物车",add_to_cart_product_path(@product),method: :post,class:"btn btn-primary red_button",style:"margin-top:10px; ") %>
                  <%= link_to("收藏","#",class:"btn btn-primary",style:"margin-top:10px;") %>
              </div>

            </div>
          </div>
        </div>
      <!-- </div> -->

    </div>
  </div>

  <div  class="col-md-11" style="">
    <%= link_to("Back to index",products_path,class:"btn btn-primary red_button",style:"margin-bottom:10px; float:right;") %>
  </div>

</div>
