<div class="row">
    <div class="col-md-6">
        <% if @product.image.present? %>
        <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    <% else %>
        <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
        <% end %>
    </div>
    <div class="col-md-6">
        <h2>
            <%= @product.title %>
        </h2>
        <div style="height:100px;">
            <p>
                <%= @product.description %>
            </p>
        </div>
        <div>
          服务时间：终身
          <br>
          服务内容：
          法律咨询：
          专业套路：
          具体事物指导：

        </div>
        <div class="product-price">
            全栈价：人民币：
            <%= @product.price %>元
        </div>
        <div class="pull-right">
            <% if @product.quantity >0 %>
            <%= link_to("立即购买", add_to_cart_product_path(@product),:method => :post, :class => "btn btn-primary btn-lg btn-danger") %>
        <% else  %>
            <%= link_to("商品缺货","#",class:"btn btn-primary ") %>
        </div>
      <% end %>
    </div>
</div>
</div>
