<div class="row">


    <div class='col-xs-12 col-md-6'>
      <% if @photos.present? %>
         <div class="tab-content clear-fix">
           <% @photos.each_with_index do |p,index| %>
             <% if index <4 %>
              <div class= "tab-pane <%= render_active(index) %>" id="<%= index %>">

                <%= image_tag(p.avatar.thumb.url, class: "thumbnail") %>
              </div>
             <% end %>
           <% end %>
         </div>

         <ul class="nav nav-tabs">
           <% @photos.each_with_index do |p,index| %>
             <% if index <4 %>
               <li>
                <div style="letter-spacing: 50px"> <a href="#<%= index %>" data-toggle="tab"><%= image_tag(p.avatar.small.url) %></a></div>
               </li>
             <% end %>
           <% end %>
         </ul>
        <% else %>
          <%= image_tag("http://placehold.it/400x400&text=No Pic", class:"thumbnail") %>
        <% end %>
      </div>


      <div class="col-md-6">
          <div class="col-md-6">
            <h2> <%= @product.title %> </h2>
            <div style="height:100px;">
              <p>
                <%= @product.description %>
              </p>
            </div>
            <div> 数量 : <%= @product.quantity %> </div>
            <div>类别 : <%= @product.category.name %></div>
            <div class="product-price"> ￥ <%= @product.price %> </div>
            <span>
              <% if current_user && current_user.is_like?(@product) %>
                <%= link_to("取消商品", unlike_product_path(@product), method: :post, class: "fa fa-heart") %>
              <% else %>
                <%= link_to("收藏收藏", like_product_path(@product), method: :post, class: "fa fa-heart", style:"color:red" ) %>
              <% end %>
            </span>
            <div class="pull-right">
              <% if @product.quantity.present? && @product.quantity > 0 %>
                <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-lg btn-danger") %>
              <% else %>
                已销售一空，无法购买
               <% end %>
            </div>
          </div>
        </div>
      </div>

      <div>
          <% if @product.image.present? %>
            <%= image_tag(@product.image.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>


          <% if @product.image2.present? %>
            <%= image_tag(@product.image2.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>

          <% if @product.image3.present? %>
            <%= image_tag(@product.image3.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>

          <% if @product.image4.present? %>
            <%= image_tag(@product.image4.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
      </div>
</div>
