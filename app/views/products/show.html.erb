<div class="row">
  <div class="col-md-6">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://ww1.sinaimg.cn/large/006tKfTcgy1ffkzljwfr1j30dc0dcwev.jpg", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div class="product-price"> ¥ <%= @product.price %></div>
    <div class="pull-right">
      <%= link_to("加入购物车", "#{}", :class => "btn btn-danger btn-lg") %>
    </div>
  </div>
</div>
