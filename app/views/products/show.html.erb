<div class="row">
  <div class="col-md-6">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/200x200&text=Hu lu wa", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>
    <div class="" style="height:100px;">
      <p> <%= @product.description %> </p>
    </div>
    <div class=""> 数量 ：<%= @product.quantity %> </div>
    <div class="product-price">  $  <%= @product.price %> </div>
    <div class="pull-right">
      <%= link_to("add it to cart", "#", class: "btn btn-primary btn-lg btn-danger") %>
    </div>
  </div>
</div>
