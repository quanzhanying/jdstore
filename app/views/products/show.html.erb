<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-md-5">
            <%= image_tag(@product.image_url(:medium)) %>
        </div>
        <div class="col-sm-6 col-md-4 col-md-offset-1">
            <h2><%= @product.title %></h2>
            <p><%= @product.description %></p>
            <p>数量：<%= @product.quantity %></p>
            <p>$ <%= @product.price %></p>

        </div>
        <div class="col-md-1" style="margin-top: 200px">
          <% if @product.quantity > 0 %>
            <%= link_to("加入购物车", add_to_cart_product_path(@product),
            method: :post, class: "btn btn-danger btn-lg") %>
          <% else %>
            <%= link_to("加入购物车", add_to_cart_product_path(@product),
            method: :post, class: "btn btn-danger btn-lg disabled") %>
          <% end %>
        </div>



    </div>
</div>
