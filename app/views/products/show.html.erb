<h2>商品详情:<%= @product.title %></h2>

<div class="row">
  <div class="col-md-4" >
    <img src='<%= image_url @product.image %>' style="width:100%;" >
  </div>
  <div class="col-md-6">
    <div class="panel panel-default" >
      <div class="panel-heading"><%= @product.title%></div>
      <div class="panel-body">
        <p>产品描述：<%= simple_format(@product.description) %>
        </p>
      </div>
      <div class="panel-footer">
        <p>
          产品价格：$<%= @product.price%>
          <br>
          产品库存: <%= @product.quantity %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-2" style="margin-top:60px;">
    <p class="btn btn-danger">加入购物车</p>
  </div>
</div>
