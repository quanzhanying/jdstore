<div class="row">
  <!-- 图片框 -->
  <div class="col-md-6">

        <!-- 显示图判断 -->
        <% if no_pic?(@product) %>
          <img src="/nopic.png" alt="no picture" class="img-responsive">
        <% else %>
          <img src="<%= @product.image %>" alt="<%= @product.title %>" class="img-responsive">
        <% end %>

  </div>
  <!-- 描述框 -->
  <div class="col-md-6">
    <h1><%= @product.title %></h1>
    <div>
      <p><%= simple_format(@product.description) %></p>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
    </div>
    <h6>库存: <%= @product.quantity %></h6>
    <h2>￥<%= @product.price %>.00</h2>
    <%#= link_to('编辑',edit_admin_product_path(product),class: "btn btn-primary",role: "button") %> 
    <%= link_to('加入购物车',add_to_cart_product_path(@product), :method => :post,class: "btn btn-danger btn-lg",role:"button") %>

    <!-- <button type="button" class="btn btn-danger btn-lg">加入购物车</button> -->


  </div>
</div>