<h1> Edit a product </h1>

<%= simple_form_for @product do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :quantity %>
<%= f.input :price %>
<%= if@product.image.present? %>
<%=image_tag(@product.image.thumb.url)%>
<%= f.input :image%>
<% else %>
<%= f.input :image%>
<% end %>




  <%= f.submit "Submit" %>
<% end %>
