<div class="row">
  <div class="col-md-12">
    <h2>Order Lists</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Shop Item</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
      </thead>

      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td><%= product_list.product_title %></td>
          <td><%= product_list.product_price %></td>
          <td><%= product_list.product_quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Total :<%= @order.total %>
      </span>
    </div>

    <h2>Shipping Info</h2>
    <table class="table table-striped table-bordered">
      <tbody>
      <tr>
        <td>Shipping Name</td>
      </tr>
      <tr>
        <td><%= @order.shipping_name %></td>
      </tr>

      <tr>
        <td>Shipping Phone</td>
      </tr>
      <tr>
        <td><%= @order.shipping_number %></td>
      </tr>

      <tr>
        <td>Shipping Address</td>
      </tr>
      <tr>
        <td><%= @order.shipping_address %></td>
      </tr>

      <tr>
        <td>Shipping By</td>
      </tr>
      <tr>
        <td><%= @order.shipping_by %></td>
      </tr>

      <tr>
        <td>Paid by</td>
      </tr>
      <tr>
        <td><%= @order.paid_by %></td>
      </tr>
    </tbody>
    </table>

  </div>
</div>
