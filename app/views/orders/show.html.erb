<div class="row">
  <div class="col-md-12">
    <h2>订单明细</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="30%">商品明细</th>
          <th>单价</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td>
            <%= product_list.quantity %>
          </td>
          <td>
            <%= product_list.product_price %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
      总计<%= @order.total  %>CNY
      </span>
    </div>

    <hr>
    <h2>寄送资讯</h2>

    <table>
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="pull-right">
      <% case @order.aasm_state %>
      <% when "order_placed" %>
        <%= link_to("支付宝支付",pay_with_alipay_order_path(@order.token), method: :post, class: "btn btn-ms btn-success pull-right") %>
        <%= link_to("微信支付", pay_with_wechat_order_path(@order.token), method: :post, class: "btn btn-ms btn-danger pull-right") %>
        <%= link_to("取消订单",cancell_order_order_path(@order.token),method: :post, class: "btn btn-ms btn-default pull-right") %>

        <% when "paid" %>
        <a href="#" class="btn btn-danger" disable>已付款</a>
        <%= link_to("取消订单", cancell_order_order_path(@order.token), :method => :post, class: "btn btn-ms btn-danger pull-right ") %>
        <% when "order_cancelled" %>
        <a href="#" class="btn btn-danger" disable>订单已取消</a>

        <% when "shipping" %>
        <%= link_to("确认收货", deliver_account_order_path(@order,token), method: :post, class:  "btn btn-danger pull-right") %>
        <% when "shipped" %>
        <%= link_to("退货", return_good_account_order_path(@order.token), method: :post, class: "btn btn-default pull-right") %>

        <% when "good_returned" %>
        <a href="#" class=" btn btn-default" disable>已退货</a>
     <% end %>
  </div>

</div>
