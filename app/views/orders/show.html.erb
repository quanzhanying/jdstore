<div class="row">
  <div class="col-md-12">
    <h2>订单明细</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
        </tr>
      </thead>

    <tbody>
      <% @product_lists.each do |product_list| %>
      <tr>
        <td>
          <%= product_list.product_name %>
        </td>
        <td>
          <%= product_list.product_price %>
        </td>
      </tr>
       <% end %>
    </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= @order.total %> CNY
      </span>
    </div>

    <hr>

    <h2> 寄送资讯 </h2>
    <table class="table table-striped table-boldered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>

    </table>
    <div class="pull-right">
      <% case @order.aasm_state %>
        <% when "order_placed" %>
        <%= link_to("支付宝支付",pay_with_alipay_order_path(@order.token), method: :post, class: "btn btn-danger") %>
        <%= link_to("微信支付", pay_with_wechat_order_path(@order.token), method: :post, class: "btn btn-danger") %>
        <% when "paid" %>
        <%= link_to("已付款", account_orders_path, class: "btn btn-danger") %>
          <%= link_to("申请取消订单", require_cancell_admin_order_path(order), method: :post, class: "btn btn-danger") %>
        <% when "shipping" %>
        <%= link_to("已付款", account_orders_path, class: "btn btn-danger") %>
          <%= link_to("已到货", deliver_admin_order_path(@order), method: :post, class: "btn btn-danger") %>
        <% when "shipped" %>
        <%= link_to("已付款", account_orders_path, class: "btn btn-danger") %>
          <%= link_to("申请退货", require_return_good_account_order_path(@order), method: :post, class: "btn btn-danger") %>
        <% when "good_returned" %>
          <a href="#", class="btn btn-danger" disable>已退货</a>
        <% when "order_cancelled" %>
          <a href="#", class="btn btn-danger" disable>已取消</a>
          <%= link_to("删除订单", admin_order_path(order), method: :delete, class: "btn btn-danger") %>
      <% end %>
  </div>
  </div>

</div>
