<div class="row">
  <div class="col-md-12">

    <h2>购物明细</h2>

    <table class = "table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>购买数量</th>


        </tr>
      </thead>

      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td>
            <%= product_list.product_name %>
          </td>
          <td>
            <%= product_list.product_price %>
          </td>
          <td>
          <%= product_list.purchase_quantity %> </td>
        </tr>
          <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
      总计 <%= @order.total %>  CNY </span>

    </div>

    <hr>
    <h2> 寄送信息</h2>

    <table class= "table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.bill_name %> - <%= @order.bill_address %>
          </td>
        </tr>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.ship_name %> - <%= @order.ship_address %>
          </td>
        </tr>
      </tbody>

    </table>
    <% if !@order.is_paid %>
    <div class="group pull-right">
      <%= link_to("支付宝支付",pay_with_alipay_order_path(@order.token), method: :post, class: 'btn btn-default btn-danger') %>
      <%= link_to("微信支付",pay_with_wechat_order_path(@order.token), method: :post, class: 'btn btn-default btn-danger') %>
        </div>
      <% else %>
      <p class="text-center"> 已付款成功 </p>

    <% end %>

  </div>
</div>
