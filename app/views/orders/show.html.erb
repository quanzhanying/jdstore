<div class="col-sm-12 col-md-12 col-lg-12">
  <h1>Product List</h1>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td>Title</td>
        <td>Price</td>
        <td>Quantity</td>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "check_out_cart_items", collection: @order.product_lists, as: "item"  %>
    </tbody>
  </table>
</div>

<div class="col-sm-12 col-md-12 col-lg-12 text-right">
  <p>
      总计：$ <%= render_cart_total_price(current_cart) %>
  </p>
</div>

<div class="col-sm-12 col-md-12 col-lg-12">
  <h1>Order Info</h1>
  <table class="table table-striped table-bordered">
    <tr>
      <td>Order Person</td>
    </tr>
    <tr>
      <td>
        <address>
          <strong>Address</strong><br>
          <%= @order.billing_address %>
        </address>

        <address>
          <strong>Full Name</strong><br>
          <%= @order.billing_name %>
        </address>
      </td>
    </tr>
    <tr>
      <td>Receiver</td>
    </tr>
    <tr>
      <td>
        <address>
          <strong>Address</strong><br>
          <%= @order.shipping_address %>
        </address>

        <address>
          <strong>Full Name</strong><br>
          <%= @order.shipping_name %>
        </address>
      </td>
    </tr>
  </table>
</div>

<div class="col-sm-12 col-md-12 col-lg-12">
  <% if @order.is_paid %>
    <%= link_to("Already Paid", "###", class: "btn btn-default pull-right", disabled: "disabled") %>
  <% else %>
    <%= link_to("Use Alipay", pay_with_alipay_order_path, method: :post, class: "btn btn-success pull-right") %>
  <% end %>
</div>
