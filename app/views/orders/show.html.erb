<div class="row">
  <div class="site-wrapper mt-20">
    <div class="col-md-12 col-sm-12 col-xd-12">
      <h4>订单明细</h4>
      <ul class="list-inline">
        <li><a href="/"> 首页 </a>/</li>
        <li><a href="/products"> 商品 </a>/</li>
        <li><a href="#"> 订单明细 </a></li>
      </ul>
    </div>
  </div>
</div>

<!-- <section id="shop-checkout" class="ptb-100"> -->
<section id="shop-checkout" style="margin: 20px auto 100px;">
  <div class="container">
    <div class="row">

      <div class="col-md-12 check_responsive">
        <div class="small-header" style="text-align:center;">
          <h3>订单明细</h3>
        </div>

        <div class="billing-table pt-30">
          <table class="table">
            <thead>
              <tr>
                <th>商品 </th>
                <th>数量 </th>
                <th>单价 </th>
              </tr>
            </thead>

            <tbody>
              <% @product_lists.each do |product_list| %>
              <tr class="active">
                <td><%= product_list.product_name %></td>
                <td><%= product_list.quantity %> </td>
                <td><%= product_list.product_price %> CNY</td>
              </tr>
              <% end %>
              <tr class="active">
                <td class="billing-total">合计</td>
                <td class="billing-total"></td>
                <td class="billing-total"><%= @order.total %> CNY</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="col-md-12 check_responsive woocommerce-billing-fields">
        <!-- Product Row Two -->
        <div class="small-header">
          <h4>订单信息</h4>
        </div>

        <div class="contact-form pt-10">

          <div class="col-xs-12">
            <div class="form-group">
              <p class="help-block">请认真检查收件地址信息</p>
              <label class="pt-10"> 订购人</label>
            </div>
            <h5><%= @order.billing_name %> - <%= @order.billing_address %></h5>
          </div>

          <div class="col-xs-12">
            <div class="form-group">
              <label class="pt-10">收货人</label>
            </div>
            <h5><%= @order.shipping_name %> - <%= @order.shipping_address %></h5>
          </div>

          <div class="col-xs-12">
            <div class="dashed-border">
            </div>
          </div>

          <div class="col-xs-10 pt-40">

          </div>

        </div>
      </div>


      <div class="pt-20 check_responsive">
        <div class="col-md-6">
          <div class="payment-method pt-20">
            <div class="small-header">
              <h2>支付方式</h2>
            </div>

            <!-- <div class="pt-30">
              <input type="submit" class="btn btn-default theme-btn" name="Submit" value="Submit">
            </div> -->

            <div class="pull-left pt-30">
              <% if @order.order_placed? || @order.paid? %>
                <%= link_to("申请取消订单", apply_to_cancel_order_path(@order), method: :post, class: "btn  btn-info") %>
              <% end %>
            </div>
            <% if !@order.is_paid? %>
              <div class="group pull-right pt-30">
                <%= link_to("支付宝模拟支付", pay_with_alipay_order_path(@order.token), :method => :post, :class => "btn btn-danger") %>
                <%= link_to("微信模拟支付", pay_with_wechat_order_path(@order.token), :method => :post, :class => "btn btn-danger") %>
              </div>
            <% else %>
              <p class="text-center">此订单已完成付款</p >
            <% end %>

          </div>
        </div>
      </div>

    </div>
  </div> <!-- end container -->
</section>



