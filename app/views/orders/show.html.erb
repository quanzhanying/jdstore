<div class="row">
  <div class="col-md-12">

    <h2> Order Information </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Details</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>

        <% @product_lists.each do |product_list| %>
        <tr>
          <td>
            <%= product_list.product_name %>
          </td>
          <td>
            <%= product_list.product_price %>
          </td>
        </tr>
        <% end %>

      </tbody>
    </table>

    <div class="group pull-right">
      <%= link_to("use alipay", pay_with_alipay_order_path(@order.token), :method => :post, :class => "btn btn-danger") %>
      <%= link_to("use wechat", pay_with_wechat_order_path(@order.token), :method => :post, :class => "btn btn-danger") %>
    </div>

    <div class="total clearfix">
      <span class="pull-right">
        Total <%= @order.total %> CNY
      </span>
    </div>

    <hr>

    <h2> Package Information </h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            Ordered By
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            Consignee
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="pull-left">
      <% if @order.order_placed? || @order.paid? %>
      <%= link_to("Apply to cancel", apply_to_cancel_order_path(@order.token), method: :post, class: "btn btn-info") %>
      <% end %>
    </div>

    <% if !@order.is_paid? %>
    <div clas="group pull-right">
      <%= link_to("Pay by Paypal", pay_with_alipay_order_path(@order.token), :method => :post, :class => "btn btn-danger") %>
      <%= link_to("Pay by Wechat", pay_with_wechat_order_path(@order.token), :method => :post, :class => "btn btn-danger") %>
    </div>
    <% else %>
    <p class="text-center"> You have already paid!</p>
    <% end %>

  </div>
</div>
