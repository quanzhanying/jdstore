<div class="row showproduct-bg showproduct-font" style="margin:30px">
  <div class="col-md-12">
    <h2>Shopping list</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">
            Product Name
          </th>
          <th>
            Price
          </th>
          <th>
            Quantity
          </th>

        </tr>
      </thead>

      <tbody>
        <% current_cart.cart_items.each do |item| %>
        <tr>
          <td>
            <%= link_to(item.product.title,product_path(item.product)) %>
          </td>
          <td>
              <%= item.product.price %>
          </td>
          <td>
              <%= item.quantity %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix ">
      <span class="pull-right">总计 <%= render_cart_total_price(current_cart) %></span>
    </div>
  </div>
  <h2>Order details</h2>
  <div class="order-form showproduct-font">
    <%= simple_form_for @order do |f| %>
      <fieldset>
        <legend class="showproduct-font">订购人</legend>
        <div class="form-group col-lg-6">
          <%= f.input :billing_name %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.input :billing_address %>
        </div>
      </fieldset>

      <fieldset>
        <legend class="showproduct-font">收货人</legend>
        <div class="form-group col-lg-6">
          <%= f.input :shipping_name %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.input :shipping_address %>
        </div>
      </fieldset>
        <div class="checkout">
          <%= f.submit "生成订单", class:"btn btn-lg btn-danger pull-right",data:{disable_with:"Submitting..."} %>
        </div>
    <% end %>
  </div>
</div>
