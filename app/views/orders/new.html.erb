<div class="row">
    <div class="col-md-12">
        <h2>购物明细</h2>

        <table class="table table-boldered">
            <thead>
                <tr>
                    <th width="80%">
                        商品明细
                    </th>
                    <th>
                        单价
                    </th>
                    <th>
                        数量
                    </th>
                </tr>
            </thead>

            <tbody>
                <% current_cart.cart_items.each do |f| %>
                <tr>
                    <td>
                        <%= link_to(f.product.title, product_path(f.product)) %>
                    </td>
                    <td>
                        <%= f.product.price %>
                    </td>
                    <td>
                        <%= f.quantity %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>

        <div class="total clearfix">
            <span class="pull-right">
                统计<%= render_cart_total_price(current_cart) %>RMB
            </span>
        </div>
        <hr>

        <h2>订单详情</h2>
        <div class="order-form">
            <%= simple_form_for @order do |f| %>

            <legend>订单人</legend>
            <div class="form-group col-lg-6">
                <%= f.input :billing_name %>
            </div>
            <div class="form-group col-lg-6">
                <%= f.input :billing_address %>
            </div>

            <legend>收货人</legend>
            <div class="form-group col-lg-6">
                <%= f.input :shipping_name %>
            </div>
            <div class="form-group col-lg-6">
                <%= f.input :shipping_address %>
            </div>

            <div class="checkout">
                <%= f.submit "生成订单", class: "btn btn-lg btn-danger pull-right", data: {disable_with: "Submitting..."} %>
            </div>

            <% end %>
        </div>
    </div>
</div>
