<div class="col-md-12">
    <h2>全部订单</h2>

    <table class="table table-bordered">

        <thead>
            <tr>
                <th style="width :10%">
                    订购人
                </th>
                <th style="width :20%">
                    用户邮箱
                </th>

                <th style="width :15%">
                    总价
                </th>
                <th style="width :10%">
                    付款方式
                </th>
                <th style="width :20%">
                    付款时间
                </th>
                <th style="width :20%">
                    订单状态
                </th>
                <th style="width :20%">
                    操作
                </th>

            </tr>
        </thead>
        <tbody>
            <% @orders.each do |o| %>
            <tr>

                <td>
                    <%= o.billing_name %>
                </td>
                <td>
                    <%= o.user.email%></td>
                <td>
                    <%= o.total %>
                </td>
                <td>
                    <%= o.payment_method %>
                </td>

                <td>
                    <%= o.created_at %>
                </td>
                <td>
                    <%= o.aasm_state %>
                </td>
                <td>
                    <%= render_order_state(o) %>
                </td>

            </tr>
            <% end %>
            <table>
                <br/><br/>
