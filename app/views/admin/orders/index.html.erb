<h2> 訂單列表 </h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>生成時間</th>
      <th>訂購者</th>
      <th>訂單狀態</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to(order.id, admin_order_path(order) )%> </td>
      <td><%= order.created_at.to_s(:long) %> </td>
      <td><%= order.user.email %> </td>
      <td><%= order.aasm_state %> </td>
    </tr>
  <% end %>

  </tbody>
</table>
