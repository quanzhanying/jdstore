
    <h2>订单统计</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>订单号</th>
          <th>总价</th>
          <th>支付方式</th>
          <th>支付情况</th>
          <th>订单状态</th>
          <th>处理订单</th>

        </tr>

      </thead>



      <tbody>
       <% @orders.each do |order| %>
       <tr>
      <td><%= order.id %> </td>
      <td><%= order.total %> </td>
      <td><%= order.payment_method %> </td>
      <td><%= order.is_paid %> </td>
      <td><%= order.aasm_state %></td>
      <td>
         <% case order.aasm_state %>
         <% when "order_placed" %>
           <%= link_to("取消订单",cancell_order_admin_order_path(order.token), method: :delete, class: "btn btn-mx btn-default pull-right") %>
         <% when "paid" %>
          <%= link_to("出货",ship_admin_order_path(order.token), method: :put, class: "btn btn-ms btn-default pull-right") %>
          <%= link_to("取消订单",cancell_order_admin_order_path(order.token), method: :post, class: "btn btn-ms btn-default pull-right") %>
         <% when "shipping"   %>
          <%= link_to("到货",deliver_admin_order_path(order.token), method: :post, class: "btn btn-ms btn-default pull-right") %>
         <% when "shipped" %>
          <%= link_to("退货",return_good_admin_order_path(order.token), method: :post, class: "btn btn-ms btn-default pull-right") %>
         <% when "good_returned"  %>
         <p>货已退</p>
         <% when "order_cancelled" %>
         <p>
           订单已取消
         </p>
         <% else %>
         <p>
           异常
         </p>
         <% end %>
     </td>

    </tr>

    <% end %>
    </tbody>
  </table>
