<h2>订单列表 </h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>生成时间</th>
      <th>订购者</th>
      <th>订单状态</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td> <%= link_to(order.id, admin_orders_path(order))%></td>
        <td> <%=order.created_at.to_s(:long) %></td>
          <td> <%= order.user.email%></td>
            <td> <%= order.aasm.state%></td>
    </tr>
  </tbody>
</table>
