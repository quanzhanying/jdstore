<h1>大手冢</h1>

<table class="table table-borded">
  <thead>
    <tr>
      <th> # </th>
      <th> User </th>
      <th width="100">  total price  </th>
      <th width="100"> order_state </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to(order.id, order_path(order.token))  %>
          <% if order.is_applied_cancell%>
            <label class="label label-danger">is applied cancell!!!</label>
          <% end %>
        </td>
        <td> <%= order.user.email %> </td>
        <td> $ <%= order.total %> </td>
        <td><label class="label label-success"> <%= order.aasm_state %></label> </td>
        <td>
          <% if (order.order_placed? || order.paid?) && order.is_applied_cancell %>
            <%= link_to("cancell_order", cancell_order_order_path(order), method: :post, class: "btn btn-danger") %>
          <% else %>
            <%= link_to("cancell_order", cancell_order_order_path(order), method: :post, class: "btn btn-danger disabled") %>
          <% end %>

          <% if order.paid? %>
            <%= link_to("   ship   ", ship_order_path(order), method: :post, class: "btn btn-danger") %>
          <% else %>
            <%= link_to("   ship   ", ship_order_path(order), method: :post, class: "btn btn-danger disabled") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
