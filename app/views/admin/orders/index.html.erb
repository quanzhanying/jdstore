<div class="col-md-12">

  <h2 class="text-center"> 订单汇总 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 订单编号 </th>
        <th> 订单总价 </th>
        <th> 支付状态 </th>
        <th> 支付方式 </th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td> <%= link_to(order.id,order_path(order.token)) %> </td>
          <td> <%= order.total %> </td>
          <td> <% if !order.is_paid %>  未支付
            <% else %> 已支付
             <% end  %>
            </td>
          <td> <%= order.payment_method %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
