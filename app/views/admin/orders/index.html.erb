<div class="row">
  <div class="col-md-12">

<h2> 订单列表 </h2>

<% @orders.each do |order| %>
  <span class="btn btn-primary"> <%= order.user.email %></span>
  <span>
    <% if order.is_paid? %>
    <label class="label label-danger"> 用户申请取消 </label>
    <% end %>
  </span>
  <div class="pull-left">
    <%= render_order_state(order) %>
  </div>

  <%= link_to("取消订单", cancel_admin_order_path(order), method: :post, class: "btn btn-md btn-default pull-right") %>
  <%= link_to("出货", ship_admin_order_path(order), method: :post, class: "btn btn-md btn-success pull-right") %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <td> 订单号 <%= link_to(order.token, order_path(order.token)) %> </td>
        <td> 品名 </td>
        <td> 价格 </td>
        <td> 数量 </td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% order.product_lists.each do |product_list| %>
      </tr>
      <tr>
      <td>
        <td> Movie Name: <%= product_list.product_name %> </td>
      </td>
      <td>
        Unit Price: $ <%= product_list.product_price %>
      </td>
      <td>
        Quantity: <%= product_list.quantity %>
      </td>
      </tr>
      <% end %>
    </tbody>
  </table>
    <div class="total clearfix">
      <span class="pull-right">
        Total $ <%= order.total %>
      </span>
    </div>

    <br><br><br>
    <% end %>
</div>
</div>
