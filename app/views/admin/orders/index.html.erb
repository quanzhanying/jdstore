<div class="container-fluid" style="margin-top: 30px;">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3>
            <%= t("admin.order_list") %>
            <div class="dropdown clearfix pull-right panel-title">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  排序
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
                    <li>
                      <%= link_to("所有订单", admin_orders_path) %>
                    </li>
                    <li>
                      <%= link_to("已完成订单", admin_orders_path(:state => "finished")) %>
                    </li>
                    <li>
                        <%= link_to("待收款订单", admin_orders_path(:state => "placed")) %>
                    </li>
                    <li>
                      <%= link_to("待发货订单", admin_orders_path(:state => "paid") ) %>
                    </li>
                    <li>
                      <%= link_to("回收站", admin_orders_path(:state => "cancelled") ) %>
                    </li>
                </ul>
            </div>
          </h3>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>生成时间</th>
              <th>订购者</th>
              <th>订单状态</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to(order.id, admin_order_path(order)) %></td>
                <td><%= order.created_at.to_s(:long) %></td>
                <td><%= order.user.email %></td>
                <td><%= order.aasm_state %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </row>
</div>
