<h2>订单列表</h2>

<br />

<% @orders.each do |order| %>
<table class="table table-bordered">
  <tbody>
    <tr>
      <td>
        <%= order.created_at %> |
        订单号:
        <%= link_to(order.token, order_path(order.token)) %>
      </td>
    </tr>

  </tbody>
  <tbody>
<!--
                    <% order.product_lists.each do |product_list| %>
                    <tr>
                        <td>
                            <%= product_list.product_name %>
                        </td>
                        <td>
                            <%= product_list.product_price %>
                        </td>
                        <td>
                            <%= product_list.quantity %>
                        </td>
                        <td>
                            <%= product_list.product_price * product_list.quantity %>
                        </td>
                    </tr>
                    <% end %> -->

    <tr>
      <td colspan="3">
        <% order.product_lists.each do |product_list| %>
          <%= product_list.product_name %>
          <span class="pull-right"> ￥ <%= product_list.product_price %> |
          <%= product_list.quantity %></span>
          <br />
        <% end %>
      </td>
      <td>
        总价 ￥
        <%= order.total %>
      </td>
      <td>
        <%= render_order_status(order) %><br />
        <% if order.order_cancelled? %>
        <%= link_to("取消订单", cancel_admin_order_path(order), method: :post, class: "btn disabled") %><br />
        <% else %>
        <%= link_to("取消订单", cancel_admin_order_path(order), method: :post, class: "btn") %><br />
        <% end %>
        <%= link_to("出货", ship_admin_order_path(order), method: :post,  class: "btn") %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>
