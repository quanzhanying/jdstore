<div style="padding:10px; float:right;">
  <% case order.aasm_state %>
  <% when "order_placed" %>
    <%= link_to("取消订单", cancel_admin_order_path(order.token), method: :post,  class: "btn btn-sm btn-default") %>
  <% when "paid" %>
    <%= link_to("取消订单", cancel_admin_order_path(order.token), method: :post,  class: "btn btn-sm btn-default") %>
    <%= link_to("出货", shipping_admin_order_path(order.token), method: :post, class: "btn btn-sm btn-danger") %>
  <% when "shipping" %>
    <%= link_to("设为已出货", shipped_admin_order_path(order.token), method: :post, class: "btn btn-sm btn-default") %>
  <% when "shipped" %>
    <%= link_to("退货", return_admin_order_path(order.token), method: :post, class: "btn btn-sm btn-default") %>
  <% when "order_cancelled" %>
    <span class="label label-default">订单已取消</span>
  <% when "good_returned" %>
    <span class="label label-default">已退货</span>
  <% end %>
</div>
