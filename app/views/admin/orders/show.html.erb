<h2>购买产品的订单明细(<%= render_order_paid_state(@order) %>)</h2>

<%= render "admin/orders/state_option", order: @order %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th width="70%">商品明细</th>
      <th>单价</th>
      <th>数量</th>
    </tr>
  </thead>
  <tbody>

    <% @product_lists.each do |product_list| %>
    <tr>
      <td><%= product_list.product_name %></td>
      <td><%= product_list.product_price %></td>
      <td><%= product_list.quantity %></td>
    </tr>
    <% end %>

  </tbody>
</table>

<div class="total clearfix">
  <span class="pull-right">
    总计<%= @order.total%> 元
  </span>
</div>

<hr>

<h2>寄送资讯</h2>

<table class="table table-striped tabled-bordered">
  <tbody>
    <tr>
      <td>订货人信息</td>
    </tr>
    <tr>
      <td><%= @order.billing_name %> - <%= @order.billing_address%></td>
    </tr>
      <td>收货人信息</td>
    <tr>
      <td><%= @order.shipping_name %> - <%= @order.shipping_address %></td>
    </tr>
  </tbody>
</table>
