<div class="row">
  <div class="col-md-12">
    <%= render "state_option", order: @order %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title">订单明细 (<%= render_order_paid_state(@order) %>)</h2>



      </div>

      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th width="30%">预览</th>
            <th>商品明细</th>
            <th>单价</th>
            <th>数量</th>
          </tr>
        </thead>
        <tbody>

          <% @product_lists.each do |product_list| %>
            <tr>
              <td>
                <%= link_to product_path(cart_item.product) do %>
                  <% if cart_item.product.photos.present? %>
                    <%= image_tag(cart_item.product.photos[0].avatar.thumb.url, class: "thumbnail") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                  <% end %>
                <% end %>
              </td>

              <td>
                <%= product_list.product_name %>
              </td>
              <td>
                <%= product_list.product_price %>
              </td>
              <td>
                <%= product_list.quantity %>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>



    <div class="total cleanfix">
      <span class="pull-right">
        总计 <%= @order.total %> CNY
      </span>
    </div>
    </br>
    <hr>

    <h2> 寄送资讯 </h2>

    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
