<div class="row">
  <div class="col-md-12">
    <h2>订单明细</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <% @order_lists.each do |f|%>
        <tr>
          <td>
            <%= product_list.product_name%>
          </td>
          <td>
            <%= product_list.product_price%>
          </td>
        </tr>
      </tbody>
    </table>
      <% end %>
    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= @order.total %>RMB
      </span>
    </div>

    <hr>

    <h2>发货信息</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <td>
          <%= @order.billing_name %> - <%= @order.billing_address %>
        </td>
      </tr>
      <tr>
        <td>
          收件人
        </td>
      </tr>
      <tr>
        <td>
          <%= @order.shipping_name %> - <%= @order.shipping_address %>
        </td>
      </tr>
    </tbody>
  </table>
<%= @order.id%>
<%= @order.is_paid%>
  <div class="checkout clearfix">
    <%= link_to("支付宝结账", pay_with_alipay_order_path(@order,payment_method:"ali"), method: :post, class: "btn btn-sm btn-info btn-info")%>
      <%= link_to("微信支付", pay_with_wechat_order_path(@order,payment_method:"wx"), method: :post, class: "btn btn-default btn-sm btn-warning") %>
      <!-- <%= link_to("支付宝结账", checkout_carts_path, method: :post, class: "btn btn-sm btn-info btn-info")%>
        <%= link_to("微信支付", clear_cart_item_path(current_cart), method: :post, class: "btn btn-default btn-sm btn-warning") %> -->
      </div>
  </div>
</div>
</div>
<% end %>
