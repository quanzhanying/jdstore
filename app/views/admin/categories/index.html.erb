<div class="container-fluid" style="margin-top: 30px;">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-info">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <h3>
            <%= t("admin.category_list") %>
            <div class="group pull-right" style="padding-bottom: 20px;">
              <%= link_to(t("admin.New category"), new_admin_category_path, class: "btn btn-primary btn-sm") %>
            </div>
          </h3>
        </div>

        <!-- Table -->
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>类别</th>
              <th>管理</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td>
                    <%= link_to("Edit", edit_admin_category_path(category), class: "btn btn-sm btn-primary")%>
                    <%= link_to("Delete", admin_category_path(category),    class: "btn btn-sm btn-danger",
                                method: :delete, data: { confirm: "Are you sure?" } )%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
