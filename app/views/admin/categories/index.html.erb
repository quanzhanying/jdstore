<h2> 商品分类列表 </h2>
<div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to("新增分类", new_admin_category_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th colspan="2" width="100"> Options</th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td><%= link_to("Edit", edit_admin_category_path(category)) %></td>
                <td><%= link_to("Delete", admin_category_path(category), method: :delete, data: {confirm: "Are you sure?"}) %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
