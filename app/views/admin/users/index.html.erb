
<table class="table table-boldered">
  <thead>
    <tr>
      <td>#</td>
      <td> User Name </td>
      <td> Registration Time </td>
      <td> Option </td>
    </tr>
  </thead>

  <tbody>
      <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
       <td>
         <%= user.email %>
       </td>
       <td>
         <%= user.created_at %>
       </td>
       <td>
         <% if user.is_admin %>
         <%= link_to(" Change to User", user_admin_user_path(user), :method => :post, :class => "btn btn-xs btn-default") %>
         <% else %>
         <%= link_to("Change to Admin", admin_admin_user_path(user), :method => :post, :class => "btn btn-xs btn-default") %>
         <% end %>
       </td>
     </tr>
     <% end %>
  </tbody>
</table>
