<table class="table">
  <thead>
      <tr>
          <td>用户名</td>
          <td>注册时间</td>
          <td>上次登录时间</td>
          <td>管理选项</td>
      </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      
        <td>
          <%= render_user_status(user) %>
          <%= user.email %></td>
        <td>
            <%= user.created_at %>
        </td>
        <td>
            <%= user.last_sign_in_at %>
        </td>

        <td>
            <%= link_to("Edit", edit_admin_user_path(user))%> |
            <%= link_to("Destroy", admin_user_path(user),
                        method: :delete, data: { confirm: "Are you sure?" }) %>
            |
            <% if user.is_admin %>
              <%= link_to("ChangeToUser", change_to_user_admin_user_path(user),method: :post ,:class => "btn btn-xs btn-info") %>
            <% else %>
              <%= link_to("ChangeToAdmin", change_to_admin_admin_user_path(user),method: :post, :class => "btn btn-xs btn-info") %>
            <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
