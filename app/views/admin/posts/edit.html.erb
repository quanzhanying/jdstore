<div class="col-md-8 col-md-offset-2">
  <h2 class="text-center">Edit a Post</h2>
  <%= simple_form_for [:admin, @post] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :author, placeholder: "请输入原创作者" %>
    <%= f.input :source, placeholder: "请输入作品出处"%>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
    <% if @post.photos.present? %>
      <span>目前文章图</span><br>
      <% @post.photos.each do |p| %>
       <%= image_tag p.image.thumb.url %><br />
       <% end %>
    <% end %>
    <%= f.file_field :image, :multiple => true, name: "photos[image][]" %>

    <%= f.submit "Submit", class: "btn btn-default" %>
  <% end %>
</div>
