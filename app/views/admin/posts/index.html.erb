<div class="admin-products-page">
  <div class="pull-right">
    <%= link_to("新增文章", new_admin_post_path, class: "btn btn-default") %>
  </div>
  <h3 class="text-center">全部文章</h3>
  <hr>
  <div class="row">
    <% @posts.each do |product| %>
    <div class="col-md-6 product-chunk">
      <div class="col-md-6 chunk-left">
        <%= link_to post_path(post) do %>
          <% if post.photos.present? %>
            <%= image_tag(post.photos[0].image.thumb.url, class: "img-circle") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-6 chunk-right">
        <p><%= post.title %> <%= post.author %></p>
        <p><%= post.source %></p>
        <%= link_to("Edit", edit_admin_post_path(product)) %> |
        <%= link_to("Destroy", admin_post_path(product), method: :delete, data: { confirm: "Are your sure?" }) %>
      </div>
    </div>
    <% end %>
  </div>
</div>
