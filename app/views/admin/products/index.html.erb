<p class="pull-right"> <%= link_to("发布新品",new_admin_product_path, :class => "btn btn-default")  %> </p>
<table class="table table-boldered">
  <thead>
    <tr>
    <td> 商品名称 </td>
    <td> 商品描述 </td>
    <td> 商品库存 </td>
    <td> 商品价格 </td>
    <td> 商品管理 </td>
    <td> 上架日期 </td>
  </tr>
  </thead>
  <body>
    <% @products.each do |product| %>
    <tr>
      <td> <%= product.title %> </td>
      <td> <%= product.description %></td>
      <td> <%= product.quantity %></td>
      <td> <%= product.price %> </td>
      <td>
        <%= link_to("编辑", edit_admin_product_path(product)) %>
        <%= link_to("删除", admin_product_path(product), :method => :delete, :data => { :confirm => "确定要删除吗？"}) %>
      </td>
      <td> <%= product.created_at %></td>
    </tr>
    <% end %>
  </body>
</table>
