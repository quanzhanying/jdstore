<h2>产品清单</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>序号</th>
      <th width="220">图片</th>
      <th>名称</th>
      <th>书评</th>
      <th>价格</th>
      <th width="100">选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.bookreview %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to("编辑", edit_admin_product_path(product), class: "btn btn-primary btn-xs") %>
          <%= link_to("删除", admin_product_path(product), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "确定要删除吗?" }) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
