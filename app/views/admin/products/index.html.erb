<h1 class="text-center">产品名称</h1>
<table class="table table-boldered">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                产品名称
            </th>
            <th>
                叙述
            </th>
            <th>
                数量
            </th>
            <th>
                价格
            </th>
            <th>
                选项
            </th>
            <th>
                创建时间
            </th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td>
                #
            </td>
            <td>
                <%= link_to(product.title, new_admin_product_path(product)) %>
            </td>
            <td>
                <%= product.description %>
            </td>
            <td>
                <%=product.quantity %>
            </td>
            <td>
                <%= product.price %>
            </td>
            <td>
                <%= link_to("编辑", edit_admin_product_path(product) )%>
                |
                <%= link_to("删除", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"}) %>
            </td>
            <td>
                <%= product.created_at %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
