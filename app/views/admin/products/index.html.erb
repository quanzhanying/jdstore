<h2>Product List</h2>

<div class="pull-right">
	<%= link_to("Add a Product", new_admin_product_path, class: "btn btn-primary") %>
</div>

<br><br>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>#</th>
			<th>品名</th>
			<th>描述</th>
			<th>库存</th>
			<th>价格</th>
			<th>选项</th>
			<th>日期</th>
		</tr>
	</thead>
	<tbody>
	<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><%= link_to(product.title,admin_product_path(product)) %></td>
			<td><%= product.description %></td>
			<td><%= product.quantity %></td>
			<td><%= product.price %></td>
			<td>
				<%= link_to("Edit", edit_admin_product_path(product)) %>
				<%= link_to("Delete", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
			</td>
			<td><%= product.created_at %></td>
		</tr>
	</tbody>
	<% end %>
</table>