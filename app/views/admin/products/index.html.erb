<h2> Product List</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品",new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
        <th>促销价</th>
        <th>hot</th>
      <th width="100">Options</th>
    </tr>
  </thead>
<tbody>
  <% @products.each do |product| %>
  <tr>
    <td>
      <%= product.id %>
    </td>
    <td>
       <%= link_to product_path(product) do %>
        <% if product.image.present? %>
       <%= image_tag(product.image.thumb.url ,style: "width: 200px;") %>
       <% else %>
        <% if product.http_image.nil? %>
       <%= image_tag("http://placehold.it/200x200&text=No Pic", style: "width: 200px;") %>
       <% else %>
        <%= image_tag(product.http_image ,style: "width: 200px;") %>
       <% end %>
      <% end %>
      <% end %>
    </td>
    <td>
      <%= product.title %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td style="
    <% if product.promotional < product.price %>
    <%= "color:red;" %>
    <% end %>
    ">
      <%= product.promotional %>
    </td>
    <td>
      <%= product.hot %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_product_path(product)) %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
<div class="text-center">
  <%= will_paginate @products %>
</div>
