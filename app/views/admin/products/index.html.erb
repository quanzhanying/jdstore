<h2>
    Product List
</h2>

<div class="pull-right">
    <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default" ) %>
    <br><br>
</div>

<table class="table table-bordered">

    <thead>
        <tr>
            <td>#
            </td>

            <td>
                品名
            </td>
            <td>
                敘述
            </td>

            <td>
                庫存
            </td>
            <td>
                價格
            </td>
            <td>
                選項
            </td>
            <td>
                創建日期
            </td>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td>
                <%= product.id %>
            </td>
            <td>
              <% if product.image.present? %>
                <%= image_tag(product.image.thumb.url) %>
              <% end %>

              <center>  <%= product.title %> </center>
            </td>
            <td>
                <%= simple_format(product.description) %>
            </td>
            <td>
                <%= product.quantity %>
            </td>
            <td>
                <%= product.price %>
            </td>
            <td width="200">
                <%= link_to("Edit", edit_admin_product_path(product)) %>
                |
                <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
            </td>
            <td width="220">
                <%= product.created_at %>
            </td>

        </tr>
        <% end %>

    </tbody>
</table>
