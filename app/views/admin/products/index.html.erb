<div class="pull-right">
	<%= link_to("Add a Product", new_admin_product_path, :class => "btn btn-default") %>
</div>

<table class="table table-boldered table-striped custab">
	<thead>
		<td>品名</td>
		<td>描述</td>
		<td>价格</td>
		<td>库存</td>
		<td>管理</td>
		<td>创建日期</td>
	</thead>
	<% @products.each do |product| %>
	<tr>
		<td>
			<%= link_to(product.title, admin_product_path(product)) %>
		</td>
		<td><%= product.description %></td>
		<td><%= product.price %></td>
		<td><%= product.quantity %></td>
		<td>
			<%= link_to("Edit", edit_admin_product_path(product), :class => "btn btn-xs btn-info") %>  
			<%= link_to("Delete", admin_product_path(product), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
		</td>
		<td><%= product.created_at %></td>
	</tr>
	<% end %>
</table>
