<div class="pull-right">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered table-striped">
  <tr>
    <td>Title</td>
    <td>Description</td>
    <td>Quantity</td>
    <td>Price</td>
    <td>Operation</td>
    <td>Create at</td>
  </tr>
  <% @products.each do |product| %>
  <tr>

    <td>

      <%= render_product_status(product) %>
      <%= link_to(product.title, admin_product_path(product)) %>

    </td>

    <td><%= product.description %></td>
    <td><%= product.quantity %></td>
    <td><%= product.price %></td>
    <td>
      <% if product.is_hidden %>
        <%= link_to("Publish", publish_admin_product_path(product),method: :post,:class => "btn btn-xs btn-default") %>
      <% else %>
        <%= link_to("Hide", hide_admin_product_path(product),method: :post,:class => "btn btn-xs btn-default") %>
      <% end %>
      |
      <%= link_to("Edit", edit_admin_product_path(product),:class => "btn btn-xs btn-default") %>
      |
      <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" },:class => "btn btn-xs btn-default") %>
    </td>
    <td>
      <%= product.created_at %>
    </td>
  </tr>
  <% end %>
</table>
