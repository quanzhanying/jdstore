<div class="col-md-12">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h5>Product List</h5>

      <div class="dropdown clearfix pull-right" style="margin-top: -30px;">
        <%= link_to("新建商品", new_admin_product_path, class: "btn btn-warning pull-right") %>
        </div>

    </div>
    <div class="panel-body">
      <table class="table table-boldered">
        <tbody>
          <tr>
            <th>#</th>
            <th> 商品图片 </th>
            <th> 商品名称 </th>
            <th> 商品描述 </th>
            <th> 库存 </th>
            <th> 价格 </th>
            <th width="150px;"> 选项 </th>
            <th> 创建日期 </th>
          </tr>
          <% @products.each do |product| %>
            <tr>
              <td> <%= product.id %></td>
              <td>
                <%= link_to admin_product_path(product) do %>
                  <% if product.image.present? %>
                    <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                  <% end %>
                <% end %>
              </td>
              <td> <%= link_to(product.title, admin_product_path(product)) %></td>
              <td> <%= product.description %></td>
              <td> <%= product.quantity %></td>
              <td> <%= product.price %></td>
              <td>  <%= link_to("Edit", edit_admin_product_path(product), :class => "btn btn-xs btn-info") %>
              |
              <%= link_to("Delete",admin_product_path(product),:class => "btn btn-xs btn-danger",
                          method: :delete, data: { confirm: "Are you sure?" }) %>
              </td>
              <td> <%= product.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center">
    <%= will_paginate(@product, renderer: BootstrapPagination::Rails) %>
  </div>
</div>
