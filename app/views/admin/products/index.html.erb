<h2>Product List</h2>

<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("Add a new product", new_admin_product_path, class: "btn btn-primary btn-sm")%>
</div>


<div class="col-md-12">
  <table class="table table-bordered table-striped custab">
    <thead>
      <tr>
        <th>
          No.
        </th>
        <th width="220">
          Product Pic
        </th>
        <th>
          Product Name
        </th>
        <th>
          Price
        </th>
        <th width="100">
          Options
        </th>

      </tr>
    </thead>
    <tbody>
      <% @products.each do |p|%>
      <tr>
        <td>
          <%= p.id%>
        </td>
        <td>
          <%= link_to product_path(p) do%>
            <% if p.image.present? %>
              <%= image_tag(p.image.thumb.url, class: "thumbnail")%>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= p.title%>
        </td>
        <td>
          <%= p.price%>
        </td>

        <td>
          <%= link_to("Edit", edit_admin_product_path(p), class: "btn btn-xs btn-default btn-success")%>
          <%= link_to("Delete", admin_product_path(p), method: :delete, class: "btn btn-xs btn-default btn-danger", data: { confirm: "Are you sure to delete?"})%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
