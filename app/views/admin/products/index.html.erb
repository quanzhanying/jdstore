<div class="container"> 
  <h2>商品管理</h2>

    <div class="col-md-12">

      <%= link_to("发布新的产品", new_admin_product_path, class:"btn btn-primary pull-right") %>  
  
      <table class="table table-hover">
        <thead>
          <tr>
           <td>#</td>
           <td>名称</td>
           <td>描述</td>
           <td>价格</td>
           <td>库存</td>
           <td>操作</td>
          </tr>
        </thead>
    
        <tbody>
           <% @products.each do |product| %>
           <tr>
           <td>#</td>

           <td><%= link_to product.title, admin_product_path(product) %></td>
           <td><%= product.description %></td>
           <td><%= product.price %></td>
           <td><%= product.quantity %></td>
           <td>
             <%= link_to "编辑", edit_admin_product_path(product), class: "btn btn-sm btn-default"%>
             <%= link_to "删除", admin_product_path(product), method: :delete, class: "btn btn-sm btn-default", data: { confirm: "确认删除产品？"}%>
           </td>
           </tr>
           <% end %>
         </tbody>

      </table>

    </div>
</div>

