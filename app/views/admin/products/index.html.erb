<h2> Product List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th width="100"> Options</th>
      <th>类别</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <% @products.each do |p| %>
            <% if p.photos.present? %>
              <%= image_tag(p.photos[0].avatar.thumb.url) %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(product)) %> |<%= link_to("Deleted", admin_product_path(product), :method => :delete, :data => { :confirm => "are you sure" }) %>
        </td>
        <td><%= product.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
