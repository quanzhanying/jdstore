<div class="pull-right">
  <%= link_to("Add New Product", new_admin_product_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
    <thead>
      <tr>
        <td>#</td>
        <td>品名</td>
        <td>图片</td>
        <td>描述</td>
        <td>库存</td>
        <td>价格</td>
        <td>选项</td>
        <td>创建日期</td>
      </tr>
    </thead>
    <tbody>
      <% @products.each_with_index do |product, i| %>
        <tr>
          <td>
            <%= i+1 %>
          </td>
          <td>
            <%= product.title %>
          </td>
          <td>
            <%= product.pic %>
          </td>
          <td> <%= product.description %></td>
          <td> <%= product.quantity %> </td>
          <td> <%= product.price %> </td>
          <td>
            <%= link_to("Edit", edit_admin_product_path(product)) %>|
            <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
          </td>
          <td>
            <%= product.created_at.to_date %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
