<div class="pull-right">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default") %>
</div>

<table class="table table-default">
  <thead>
    <tr>
      <th>商品名称</th>
      <th>描述</th>
      <th>价格</th>
      <th>管理选项</th>
      <th>数量</th>
      <th>上架时间</th>
    </tr>
  </thead>

  <% @products.each do |product| %>
  <tbody>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= link_to("Edit", edit_admin_product_path(product)) %>/
          <%= link_to("Delete", admin_product_path(product), method: :delete) %>
      </td>
      <td><%= product.quantity %></td>
      <td><%= product.updated_at %></td>
    </tr>
  </tbody>
  <% end %>
</table>
