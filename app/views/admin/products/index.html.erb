<h2>商品列表</h2>

  <div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to("新增商品", new_admin_product_path, class: "btn btn-default") %>
  </div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>名称</th>
      <th>价格</th>
      <th>选项</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= link_to admin_product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to(product.title, admin_product_path(product)) %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to("修改", edit_admin_product_path(product)) %>
          <%= link_to("删除", admin_product_path(product), method: :delete,
              data: { confirm: "你确定删除吗?"}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
