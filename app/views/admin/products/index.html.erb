<h2>Product List</h2>
<div class="pull-right" sytle="padding-bottom:20px">
    <%= link_to("新增产品", new_admin_product_path, :class => "btn btn-primary btn-sm" ) %>
</div>
<table class="table table-boldered">
    <thead>
        <tr>
            <th>#</th>
            <th width="220">Product Pic</th>
            <th>Name</th>
            <th>Price</th>
            <th width="100">Options</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td>
                    <%= product.id %>
                </td>
                <td>
                    <%= link_to product_path(product) do %>
                        <% if product.image.present? %>
                            <%= image_tag(product.image.thumb.url, class: "thumbnail")  %>
                        <% else %>
                            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")  %>
                        <% end %>
                    <% end %>
                </td>
                <td>
                    <%= link_to(product.title) %>
                </td>
                <td>
                    <%= link_to(product.price) %>
                </td>
                <td>
                    <%= link_to("Edit", edit_admin_product_path(product)) %>
                    <!-- <%= link_to("destroy", admin_product_path(product), :method =>:delete, :data =>{ :confirm => "Are you sure?"}) %> -->
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
