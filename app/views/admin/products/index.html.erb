<h1>JD 商品列表</h1>
<div class="text-center, pull-right">
  <%= link_to("添加商品", new_admin_product_path(@product), :style => "font-size: 30px; text-decoration:underline;") %>
</div>
<table class="table table-boldered">
    <thead>
        <tr>
            <td>商品</td>
            <td>商品描述</td>
            <td>库存</td>
            <td>价格</td>
            <td>邮箱</td>
            <td>图片</td><td></td>
            <td>上传时间</td>
        </tr>

    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= link_to(product.title, product_path(product)) %></td>
            <td><%= product.description %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price %></td>
            <td><%= product.email %></td>
            <% if product.image.present? %>
            <td><%= image_tag(product.image.thumb.url)%></td>
            <% else %>
            <td><%=image_tag("http://placehold.it/200x200&text=No Pic") %></td>
            <% end %>
            <td><%= link_to("Edit", edit_admin_product_path(product)) %>|
            <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %></td>


            <td><%= product.created_at %></td>
        </tr>
        <% end %>
    </tbody>

</table>
