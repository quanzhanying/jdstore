<h2>Product List</h2>

<div class="pull-right" style="padding-bottom: 20px;">
	<%= link_to("Add a Product", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>

<br><br>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>#</th>
			<th width="220">商品图片</th>
			<th>品名</th>
			<th>库存</th>
			<th>价格</th>
			<th width="100">选项</th>
		</tr>
	</thead>
	<tbody>
	<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>

			<td><%= link_to(product.title,admin_product_path(product)) %></td>
			<td><%= product.quantity %></td>
			<td><%= product.price %></td>
			<td>
				<%= link_to("Edit", edit_admin_product_path(product)) %>
				<%= link_to("Delete", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>