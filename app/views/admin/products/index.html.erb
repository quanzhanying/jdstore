<div class="col-md-10 col-centered">
  <%= link_to("添加商品", new_admin_product_path, class: "btn btn-warning btn-sm pull-right", style:"margin: 20px 0;") %>
  <div class="panel">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr>
          <th>商品图</th>
          <th>商品名</th>
          <th>价格</th>
          <th>库存</th>
          <th>管理</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <%= link_to product_path(product) do %>
                <% if product.photos.present? %>
                  <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail", style:"width: 50px;") %> <!-- 使用缩略图 -->
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail", style:"width: 50px;")%>
                <% end %>
              <% end %>
            </td>
            <td style="text-align: left;"><%= link_to(product.name, product_path(product)) %></td>
            <td><%= product.price %></td>
            <td><%= product.stock %></td>
            <td>
              <%= link_to("编辑", edit_admin_product_path(product), class: "btn btn-primary btn-xs") %>
              <%= link_to("删除", admin_product_path(product), method: :delete, class: "btn btn-primary btn-xs", data: {confirm: "你确定删除商品吗？"}) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
