<div class="pull-right">
  <%= link_to("Add product", new_admin_product_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>#</td>
      <td width="220">图片</td>
      <td>品名</td>
      <td>叙述</td>
      <td>价格</td>
      <td>库存</td>
      <td width="100">选项</td>
      <td>创建日期</td>

    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=无图片", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td> <%= link_to(product.title, product_path(product)) %> </td>
        <td> <%= product.description %> </td>
        <td> <%= product.price %> </td>
        <td> <%= product.quantity %> </td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(product)) %>
          <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
        </td>
        <td>
          <%= product.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
