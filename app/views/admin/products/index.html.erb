<h1>Product List</h1>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to content_tag(:i, " 新增类别", class: "fa fa-plus"), new_category_path, class: "btn btn-primary btn-sm" %>

  <%= link_to content_tag(:i, " 新增产品", class: "fa fa-plus"), new_admin_product_path, class: "btn btn-primary btn-sm" %>
</div>

<table class="table table-bordered">
  <tdead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th>category</th>
      <th width="100">Options</th>
    </tr>
  </tdead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= product.category.name %>
        </td>
        <td>
          <%= link_to 'Edit', edit_admin_product_path(product) %>
          |
          <%= link_to 'Destroy', admin_product_path(product), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
