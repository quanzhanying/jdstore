<div class="container-fluid" style="margin-top: 30px; margin-bottom: 30px;">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-info">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <h3>
            <%= t("admin.product_list") %>
            <div class="group pull-right" style="padding-bottom: 20px;">
              <%= link_to(t("admin.new_product"), new_admin_product_path, class: "btn btn-primary btn-sm") %>
            </div>
          </h3>
        </div>

        <!-- Table -->
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th width="220">Product Pic</th>
              <th>Name</th>
              <th>Price</th>
              <th width="100">Options</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td>
                <%= link_to product_path(product) do %>
                  <% if product.image.present? %>
                    <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                  <% end %>
                <% end %>
              </td>
              <td><%= product.title %></td>
              <td><%= product.price %></td>
              <td>
                <%= link_to edit_admin_product_path(product) do %>
                  <i class="fa fa-pencil-square-o"></i>
                <% end %>
                <%= link_to move_up_admin_product_path(product), method: :patch do %>
                  <i class="fa fa-arrow-circle-o-up" ></i>
                <% end %>
                <%= link_to move_down_admin_product_path(product), method: :patch do %>
                  <i class="fa fa-arrow-circle-o-down"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
