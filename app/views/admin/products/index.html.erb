<h2> Product List </h2>

<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-primary btn-sm") %>
</div>

<br><br>

<table class="table table-bordered">

  <thead>
    <tr>
      <th> # </th>
      <th width="220"> Product Pic </th>
      <th> Name </th>
      <th> Quantity </th>
      <th> Price </th>
      <th width="220"> Options </th>
      <th width="220"> Created Date </th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td> <%= product.id %> </td>
      <td>
        <%= link_to admin_product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
        <% end %>
      </td>
      <td><%= product.title %></td>
      <td><%= product.quantity %></td>
      <td> Â¥ <%= product.price %></td>
      <td>
        <%= link_to edit_admin_product_path(product), :class => "btn btn-xs btn-info" do%><i class="fa fa-pencil"></i> <% end %>
        <%= link_to admin_product_path(product), :method => :delete, :data => {:confirm => "Are you sure?" }, :class => "btn btn-xs btn-danger" do %><i class="fa fa-trash-o"></i><% end %>
      </td>
      <td><%= product.created_at %></td>
    </tr>
    <% end %>
  </tbody>

</table>
