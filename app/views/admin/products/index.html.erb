<h1>Product List</h1>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to content_tag(:i, " 类别", class: "fa fa-plus"), new_category_path, class: "btn btn-default btn-sm" %>

  <%= link_to content_tag(:i, " 分组", class: "fa fa-plus"), new_group_path, class: "btn btn-default btn-sm" %>

  <%= link_to content_tag(:i, " 新增产品", class: "fa fa-plus"), new_admin_product_path, class: "btn btn-danger btn-sm" %>

</div>
<table class="table table-bordered">
  <tdead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Group</th>
      <th width="100">Options</th>
    </tr>
  </tdead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <% if !product.category.blank? %>
            <%= product.category.name %>
          <% end %>
        </td>
        <td>
          <table>
            <tbody>
              <% product.groups.each do |group| %>
                <tr>
                  <td><%= group.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
        <td>
          <%= link_to 'Edit', edit_admin_product_path(product) %>
          <br>
          <%= link_to 'Destroy', admin_product_path(product), method: :delete %>
          <br>
          <%= link_to "向上", move_up_admin_product_path(product), method: :patch %>
          <br>
          <%= link_to "向下", move_down_admin_product_path(product), method: :patch %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
