
<div class="backend-main">

<h2> Product List </h2>


<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th width="100"> Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(product), :class => "btn btn-sm btn-primary") %>
          <%= link_to("Delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure? "}, :class => "btn btn-sm btn-primary" ) %>
          <%= link_to("上移", move_up_admin_product_path(product), :method => :post, :class => "btn btn-sm btn-primary") %>
          <%= link_to("下移", move_down_admin_product_path(product), :method => :post, :class => "btn btn-sm btn-primary") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center col-md-12 pagination">
<%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>

</div>
