    <table class="table table-boldered">
      <%= link_to("上架新商品", new_admin_product_path, :class => "btn btn-danger pull-right") %>
      <h1>商品管理</h1>
      <tHead>
        <tr>
          <td>商品名称</td>
          <td>商品价钱</td>
          <td>商品数量</td>
          <td>商品上架时间</td>
          <td>编辑商品</td>
        </tr>
      </tHead>
        <tBody>
        <% @products.each do |product| %>
        <tr>
          <td>
            <%= render_product_status(product) %>
            <%= link_to(product.title, admin_product_path(product), ) %>
          </td>
          <td><%= link_to(product.price) %>元</td>
          <td><%= link_to(product.store) %>件</td>
          <td><%= link_to(product.created_at) %></td>
          <td>
                <% if product.is_hidden %>
                <%= link_to("上架商品", publish_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-default") %>
                <% else %>
                <%= link_to("下架商品", hide_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-default") %>
                <% end %>
              | <%= link_to("编辑商品", edit_admin_product_path(product), :class => "btn btn-xs btn-default" )%>
              | <%= link_to("删除商品", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs btn-danger")%>
            </td>
        </tr>
        <% end %>
      </tBody>
    </table>
