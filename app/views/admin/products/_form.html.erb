<%= simple_form_for [:admin,@product] do |f| %>
   <div class="form-group">
     <%= f.input :title, label: '商品名称', input_html: {class: "form-control"}%>
     <%= f.input :description, label:'商品描述',placeholder: 'This is placeholder',
          hint: 'No special character', input_html: {class: "form-control"}%>
     <%= f.input :price, label:'价格',input_html:{class:"form-control"}%>
     <%= f.input :quantity,label:'数量',input_html:{class:"form-control"}%>
   </div>
   <%= f.submit 'Submit', class: "btn btn-primary", data: {disable_with: "Submiting..."}%>
<% end %>
