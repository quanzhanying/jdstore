<%= simple_form_for [:admin,@product] do |f| %>
  <div class="form-product">
    <%= f.input :title, label: '商品名称' , input_html: { class: "form-control"} %>
    <%= f.input :description, label: '商品描述', input_html: { class: "form-control"} %>
    <%= f.input :price, label: '价格' , input_html: { class: "form-control"} %>
    <%= f.input :quantity, label: '库存' , input_html: { class: "form-control"} %>
  </div>
  <div class="form-actions text-center">
    <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary"%>
  </div>
<% end %>
