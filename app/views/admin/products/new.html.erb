<h1>  New  Product  </h1>

<%=  simple_form_for   [:admin, @product]   do   |f|  %>

<div  class="group">
   <%=  f.input  :title  %>
</div>

<div  class="group">
   <%=  f.input  :description  %>
</div>

<div  class="group">
   <%=  f.input  :price %>
</div>

<div  class="group">
   <%=  f.input  :quantity  %>
</div>


<div  class="group">
  <%=  f.input  :image,  as: :file  %>
</div>

<%=  select_tag(:category_id, options_for_select(@categories), :prompt  =>  "类别")  %>
<%=  f.input   :is_hidden  %>

<%=  f.submit   "发布产品"   %>
<%  end  %>

<script>
    autosize($('#product_description'));
</script>
