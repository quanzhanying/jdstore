<h2>新商品</h2>

<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title, label: '产品名称', placeholder: '请输入产品名称'%>
  </div>
  <div class="group">
    <%= f.input :description, label: '产品描述', placeholder: '请输入产品描述'%>
  </div>
  <div class="group">
    <%= f.input :quantity, label: '产品数量', placeholder: '请输入产品数量'%>
  </div>
  <div class="group">
    <%= f.input :price, label: '产品价格', placeholder: '请输入产品价格'%>
  </div>
  <%= f.submit "Submit", data: { disable_with: "Submiting..."}%>
<% end %>
