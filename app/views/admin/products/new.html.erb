<h1> Add a product </h1>

  <%= simple_form_for [:admin, @product ] do |f| %>

      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :quantity %>
      <%= f.input :price %>
        <div class="field">
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </div>
      <%= f.submit "Submit" %>
  <% end %>
