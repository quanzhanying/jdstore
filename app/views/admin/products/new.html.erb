<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>
  <!--分类 -->
  <div class="group">
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Category") %>
  </div>

  <br>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." }%>

  <% end %>
