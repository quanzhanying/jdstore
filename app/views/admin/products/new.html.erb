<h2> Naw Product </h2>
<%= simple_form_for [:admin, @product] do |f| %>

<div class="group">
<%= f.input :title %>
</div>
<%= f.input :description %>

<div class="group">
<%= f.input :quantity %>
</div>

<div class="group">
<%= f.input :price %>
</div>

<div class="group">
<%= f.input :image, as: :file %>
</div>

<div class="group">
<%= f.submit "Submit", data: { disable_with: "Submitting..."} %>
</div>

<% end %>
