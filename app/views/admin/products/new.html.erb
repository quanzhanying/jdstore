<div class="backend-main">


<h2>New Product</h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="form-group">
     <%= f.association :category %>
   </div>

  <div class="group">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
  </div>

  <br>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<%end %>
</div>

<script type="text/javascript">
  autosize($('#product_description'));
</script>
