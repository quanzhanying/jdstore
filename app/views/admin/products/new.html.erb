<h2><%= t("admin.new_product") %></h2>
<%= simple_form_for [:admin, @product] do |f| %>
<div class="group">
  <%= f.input :title %>
</div>

<div class="group">
  <%= f.input :description %>
</div>

<div class="group">
  <%= f.input :quantity %>
</div>

<div class="group">
  <%= f.input :price %>
</div>

<div class="group">
  <%= f.input :image, as: :file %>
</div>
<div>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
</div>
<%= f.submit "Create Product", data: {disable_with: "Submiting..."} %>
<% end %>

<script>
  autosize($('#product_description'))
</script>
