<h2> 添加商品 </h2>

<%= simple_form_for [:admin, @product] do |f| %>

<div class="group">
  <%= f.input :title, :label => "品名"%>
</div>
<div class="group">
  <%= f.input :description %>
</div>
<div class="group">
  <%= f.input :quantity %>
</div>
<div class="group">
  <%= f.input :price %>
</div>
<div>
  <%= f.input :image, as: :file %>
</div>

<%= f.submit "submit", data: { disable_with: "Submitting.." } %>

<% end %>
