<tr>
  <td><%= link_to(product.id, admin_product_path(product)) %></td>
  <td><%= product.title %></td>
  <td><%= product.description %></td>
  <td><%= product.quantity %></td>
  <td><%= product.price %></td>
  <td><%= product.created_at %></td>
  <td>
    <%= link_to("Edit", edit_admin_product_path(product), class: "btn btn-primary btn-xs") %>
    <%= link_to("Delete", admin_product_path(product), class: "btn btn-danger btn-xs pull-right", method: :destroy, data: {confirm: "Are you sure?"}) %>
  </td>
</tr>
