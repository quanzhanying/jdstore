<tr>
  <td>#</td>
  <td>
    <%= render_product_status(product) %>
    <%= link_to(product.title, admin_product_path(product)) %>
  </td>
  <td><%= link_to '#'%></td>
  <td><%= product.quantity %></td>
  <td><%= product.price %></td>
  <td><%= simple_format(product.description) %></td>
  <td>
    <%= link_to("Edit", edit_admin_product_path(product), class: "btn btn-default btn-sm") %>
    <%= link_to("Delete", admin_product_path(product), method: :delete, data_dismissable: { confirm: "Are you sure?"},class: "btn btn-default btn-sm") %>
    <% if product.is_hidden? %>
      <%= link_to(publish_admin_product_path(product), method: :post) do %>
      <i class="fa fa-eye"></i>
      <% end %>
    <% else %>
      <%= link_to(hide_admin_product_path(product), method: :post) do %>
      <i class="fa fa-eye-slash"></i>
      <% end %>
    <% end %>
  </td>
  <td><%= product.created_at %></td>
</tr>
