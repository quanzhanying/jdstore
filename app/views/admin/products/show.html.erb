<div class="container">
  <ul class="thumbnails">
    <li class="span5">
      <div class="thumbnail">
        <%=link_to(image_tag(@product.image.url(:medium)) )%>

        <div class="caption">
          <h2>  <%= link_to(@product.title, admin_product_path(@product)) %></h2>
          <p>    <%= link_to(@product.description, admin_product_path(@product)) %>
        <br></p>
          <p><a href="#" class="btn btn-success">数量
             <%= link_to(@product.quantity, admin_product_path(@product)) %> 个</a>
             <a href="#" class="btn btn-warning">价钱
                <%= link_to(@product.price, admin_product_path(@product)) %> 元</a>
               </p>
        </div>
      </div>
    </li>
  </ul>
  <hr>
</div>
