<h2><%= t("admin.edit_product") %></h2>
<%= simple_form_for [:admin, @product] do |f| %>
<div class="group">
  <%= f.input :title %>
</div>

<div class="group">
  <%= f.input :description %>
</div>

<div class="group">
  <%= f.input :quantity %>
</div>

<div class="group">
  <%= f.input :price %>
</div>

<% if @product.image.present? %>
  <span>目前商品图</span> <br>
  <%= image_tag(@product.image.thumb.url) %>
<% end %>

<div class="group">
  <%= f.input :image, as: :file %>
</div>

<div>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
</div>

<%= f.submit "Update Product", data: {disable_with: "Submiting..."} %>
<% end %>

<script>
  autosize($('#product_description'))
</script>
