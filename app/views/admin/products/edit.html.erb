<h2> Edit Product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description%>
  </div>

  <div class="group">
    <%= f.input :quantity%>
  </div>

  <div class="group">
    <%= f.input :price%>
  </div>

  <% if @product.image.present?%>
    <span><a href="http://img.leikeji.com/resource/img/5d1203cb58f94cdfb3cf86d4d25211ef.jpg"></a></span>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file%>
  </div>
  <%= f.submit "Submit", data: { disable_with: "Submitting..."}%>

<% end %>
