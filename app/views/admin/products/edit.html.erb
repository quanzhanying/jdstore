<div class="col-md-4 col-md-offset-4">
    <h2>编辑产品</h2>

    <hr>
    <%= simple_form_for [:admin,@product] do |f| %>

    <%= f.input :title %>


    <%= f.input :description %>

    <%= f.input :price, :label => "价格" %>


    <%= f.input :quantity,:label => "库存" %>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
