<h1>Edit Product</h1>

<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%=f.input :description%>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.submit "Submit", data: { disable_with: "Submitting.."} %>
  </div>
<% end %>
