<h2>Edit Product</h2>

<%= simple_form_for [:admin, @product] do |f|%>
  <div class="group">
    <%= f.input :title%>
  </div>
  <div class="group">
    <%= f.input :description%>
  </div>
  <div>
    <%= f.input :quantity%>
  </div>
  <div>
    <%= f.input :price%>
  </div>
  <%= f.submit "Submit", data: { disable_with: "Submitting..."}%>
<% end %>
