<div class="col-md-4 col-md-offset-4">
    <h2>编辑商品</h2>

    <hr />
    <%= simple_form_for [:admin,@product] do |f| %>
      <div class="form-product">
        <%= f.input :title, label:'商品名称', input_html: { class: "form-control"} %>
        <%= f.input :description, label:'商品详情', input_html: { class: "form-control"} %>
        <%= f.input :price, label:'价格',input_html: { class: "form-control"} %>
        <%= f.input :quantity, label:'库存', input_html: { class: "form-control"} %>
        <% if @product.image.present?%>
          <span>目前商品图片</span><br/>
          <%= image_tag(@product.image.thumb.url)%>
        <% end %>
        <%= f.file_field :image %>
      </div>
      <br/>
      <%= f.submit "Submit", class: "btn btn-success", data: { disable_with: "Submiting..." } %>
    <% end %>
  </div>
