<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input  :address %>
  </div>

<!-- 商品修改页也能修改图片 -->
  <% if @product.image.present? %>
     <span>目前商品图</span> <br>
     <%= image_tag(@product.image.thumb.url) %>
   <% end %>

   <div class="group">
     <%= f.input :image, as: :file %>
   </div>
<!-- end -->
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
