<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description, as: :wysihtml5 %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
     <%= f.select :category_id, @categories %>
 </div>

  <% if @product.image.present? %>
  <span>目前商品图</span><br>
  <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
