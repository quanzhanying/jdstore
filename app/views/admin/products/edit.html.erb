<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

<div class="group">
  <%= f.input :title%>
</div>

<div class="group">
  <%= f.input :description %>
</div>

<div class="group">
  <%= f.input :quantity %>
</div>

<div class="group">
  <%= f.input :price %>
</div>

<% if @product.image.present? %>
<span>Current item image</span> <br>
<%= image_tag(@product.image.thumb.url) %>
<% end %>

<div class="group">
  <%= f.input :imgage, as: :file %>
</div> 

<%= f.submit "Submit", data: { disable_with:"Submitting..."} %>

<% end %>
