<h2>编辑<%= @product.title %></h2>

<%= simple_form_for [:admin, @product] do |f| %>

    <div class="group">
      <%= f.input :title, label: "名称" %>
    </div>

    <div class="group">
      <%= f.input :description, label: "描述" %>
    </div>

    <div class="group">
      <%= f.input :quantity, label: "数量" %>
    </div>

    <div class="group">
      <%= f.input :price, label: "价格" %>
    </div>

    <% if @product.image.present? %>
      <span>目前商品图</span><br>
      <%= image_tag(@product.image.thumb.url) %>
    <% end %>

    <div class="group">
      <%= f.input :image, as: :file, label: "图片" %>
    </div>

    <%= f.submit "提交", data: { disable_with: "上传中……"} %>

<% end %>
