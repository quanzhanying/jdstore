<h1>  Edit  Product  </h1>

<%=  simple_form_for   [:admin, @product]   do   |f|  %>

<div  class="group">
   <%=  f.input  :title  %>
</div>

<div  class="group">
   <%=  f.input  :description  %>
</div>

<div  class="group">
   <%=  f.input  :price %>
</div>

<div  class="group">
   <%=  f.input  :quantity  %>
</div>


<%  if  @product.image.present?  %>
   <span>目前商品图</span> <br>
   <%=  image_tag(@product.image.thumb.url)  %>
<%  end  %>

<div  class="group">
   <%=  f.input  :image,  as: :file  %>
</div>

<%=  f.submit  "Create  Product",  data:  {  disable_with: "Create  Product..." }   %>
<%  end  %>
