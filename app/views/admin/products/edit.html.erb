<h2>Edit the Product</h2>

<%= simple_form_for [:admin, @product] do |f|%>

  <div class="group">
    <%= f.input :title%>
  </div>

  <div class="group">
    <%= f.input :description%>
  </div>

  <div class="group">
    <%= f.input :price%>
  </div>

  <div class="group">
    <%= f.input :quantity%>
  </div>

  <% if @product.image.present? %>
    <span>The present product pic </span> <br />
    <%= image_tag(@product.image.thumb.url)%>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file%>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..."}%>

<% end %>
