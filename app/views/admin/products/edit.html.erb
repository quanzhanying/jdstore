<h1> Edit product </h1>

<%= simple_form_for [:admin, @product] do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :quantity %>

  <% if @product.image.present? %>
    <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <%= f.input :image %>

  <%= f.submit "Submit" %>
<% end %>
