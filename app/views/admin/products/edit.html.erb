<h1> Edit Product </h1>
<%= simple_form_for [:admin,@product] do |f| %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :quantity %>
<%= f.input :price %>
<%= f.input :is_hidden %>
<%= f.input :image %>
<% if @product.photos.present? %>
   <span>目前商品圖</span> <br>
   <% @product.photos.each do |p| %>
     <%= image_tag p.avatar.thumb.url %><br>
   <% end %>
 <% end %>

 <div class="group">
   <%= f.label :avatar %><br>
   <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
 </div>
<%= f.submit "Submit" %>
<% end %>
