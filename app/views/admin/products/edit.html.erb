<h2>修改商品</h2>
<%= simple_form_for [:admin, @product] do |f| %>

<div class="group">
  <%= f.input :title %>
</div>

<div class="group">
  <%= f.input :description %>
</div>

<div class="group">
  <%= f.input :quantity %>
</div>

<div class="group">
  <%= f.input :price %>
</div>

<% if @product.image.present? %>
<span>目前商品图</span><br>
<%= image_tag(@product.image.thumb.url) %>
<% end %>

<div class="group">
  <%= f.input :image, as: :file %>
</div>

<%= f.submit "保存", data: {disable_with: "上传中"} %>

<% end %>
