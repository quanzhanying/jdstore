<h2> Edit Product </h2>
<%= simple_form_for [:admin, @product] do |f| %>
    <div class="group">
        <%= f.input :title %>
    </div>
    <div class="group">
        <%= f.input :description %>
    </div>
    <div class="group">
        <%= f.input :author %>
    </div>
    <div class="group">
        <h5>商品分类</h5>
        <%= f.select :category_id, @categories %>
        <br>
    </div>
    <div class="group">
        <%= f.input :quantity, :label => "商品库存"%>
    </div>
    <div class="group">
        <%= f.input :price, :label => "商品价格" %>
    </div>
    <% if @product.image.present? %>
        <span>目前商品图</span> <br>
        <%= image_tag(@product.image.thumb.url) %>
    <% end %>
    <div class="group">
        <%= f.input :image, :label => "商品图片" , as: :file %>
    </div>
    <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
