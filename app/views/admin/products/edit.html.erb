<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

   <div class="group">
     <%= f.input :description %>
   </div>

   <div class="group">
     <%= f.input :quantity %>
   </div>

   <div class="group">
     <%= f.input :price %>
   </div>

   <% if @product.image.present? %>
     <span>目前商品图</span> <br>
     <%= image_tag(@product.image.thumb.url) %>
   <% end %>

   <div class="group">
     <%= f.input :image, as: :file %>
   </div>

   <div class="group">
      <%= f.input :category, :collection => ["accessory","shoes"], :selected => "accessory" %>
   </div>

   <%= f.submit "Submit" , data: { disable_with: "Submititing..."} %>
<% end %>
