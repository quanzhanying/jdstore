<div class="pull-right">
  <%= link_to("Add an Item", new_admin_item_path, :class => "btn btn-default") %>
</div>

<br><br>

<table class="table table-boldered">
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= image_tag(item.image.small_thumb.url) if item.image? %>
      </td>
      <td>
        <%= link_to(item.title, admin_item_path(item)) %>
      </td>
      <td>
        <%= item.created_at %>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_item_path(item)) %> |
        <%= link_to("Destroy", admin_item_path(item), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
      </td>
    </tr>
  <% end %>
</table>