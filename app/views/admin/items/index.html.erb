
<div style="text-align:center;" class='pull-right'>

  <%= button_to("Add new item", new_admin_item_path, :class => "btn btn-success btn-lg", :method => :get) %>
<br><br>
</div>

<br><br>

<table class="table table-boldered">
  <% @items.each do |item| %>
  <tr>
    <td>
      <%= link_to(item.title, admin_item_path(item)) %>
    </td>

    <td>

        <% if item.is_available %>
          <%= "Available" %>
        <% else %>
          <%= "Not Available" %>
        <% end %>

    </td>

    <td>
      <%= link_to("Edit", edit_admin_item_path(item)) %>
    </td>

    <td>
      <%= link_to("Delete", admin_item_path(item), :method => :delete) %>
    </td>

    <td>
      <%= on_off_shelf(item) %>
    </td>

    <td>
      <%= item.created_at %>
    </td>
  </tr>
  <% end %>
</table>
