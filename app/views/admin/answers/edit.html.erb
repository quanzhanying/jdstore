
<hr>

<div class="col-md-8 col-md-offset-2">
  <h2 class="text-center">添加答案</h2>
  <%= simple_form_for [:admin, @answer] do |f| %>
    <%= f.input :true_answer, placeholder: "请输入正确选项"%>
    <%= f.input :description, placeholder: "请输入答案分析" %>


    <%= f.label :image %><br>
    <%= f.file_field :image, :multiple => true, name: "photos[image][]" %>（"这里可以上传图片"）<br>
    <%= f.submit "Submit", class: "btn btn-default" %>
  <% end %>
</div>
