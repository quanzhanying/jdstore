<div class="row">
  <div class="col-md-4 col-md-offset-4 ">
    <div class="col-md-10 col-md-offset-1">
    <h2>注册帐号</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username, :label => "用户名",required: true %>
        <%= f.input :email, :label =>"邮箱地址" , required: true, autofocus: true %>
        <%= f.input :password, :label => "登录密码",required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation,:label => "密码确认", required: true %>
        <%= f.input :is_admin,:label => "权限", as: :radio_buttons, collection: [['买家', false],['卖家', true]], required: true %>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "注册" %>
      </div>
    <% end %>
    <hr>

    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
