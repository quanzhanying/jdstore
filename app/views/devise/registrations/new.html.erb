<div class="login-wrap">
  <div class="registration-wrap">
    <div class="registration-block">
      <div class="content clearfix">
        <div class="right-part fr">
          <div class="devise">
            <h2>注册</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :name, required: true, placeholder: "Name" %>
                <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
                <%= f.input :password, required: true, label: false, placeholder: "Password" %>
                <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm password" %>    
              </div>

              <div class="form-actions">
                <button type="submit" class="registration-btn">注册</button>
              </div>
            <% end %>

            <div class="tip">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
