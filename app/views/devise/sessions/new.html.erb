<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-sign-in">Log in</span></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <hr />
        <div class="account">
          <%= link_to "Alredy have an account? Sign in", new_session_path(resource_name) %><br />
          <%= link_to "Forget passwordï¼Ÿ", new_password_path(resource_name) %>
        </div>
    </div>
  </div>
</div>
