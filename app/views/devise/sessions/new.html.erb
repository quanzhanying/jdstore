<div style="margin-top:120px;margin-bottom:30px;line-height:275%;">
    <h1 class="text-center", style="color:rgb(62,146,190);">用户登录</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= f.input :email, required: false, autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= f.input :password, required: false %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= f.button :submit, "登录", class: "btn btn-primary",:style => "border: none;color:white;width:100%;background-color:rgb(62,146,190);border-radius:50px;" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
