<div class="log">
  <div class="login-container">
    <h2><%= t("sign_in") %></h2>
    <hr>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= rucaptcha_image_tag(alt: 'Captcha') %>
        <%= rucaptcha_input_tag(class: 'form-control', placeholder: '请输入验证码') %>
      </div>
      <br>

      <div class="forget pull-right">
          <%= link_to "忘记密码", new_password_path(resource_name) %> <br><br>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "确认登录", class: "btn btn-danger"%>
      </div>
    <% end %>
    <hr>
    <div class="regis-link pull-right">
      <%= link_to "立即注册", new_registration_path(resource_name) %><br />
    </div>
  </div>
</div>
