<div class="container">
  <div class="row">
    <div class="login-header">
      <h1 class="brand">JDstore</h1>
    </div>
    <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 login-block">
      <h2 class="login-title">登录</h2>
      <div class="login-form">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label: false, placeholder: "E-mail", required: false, autofocus: true, class: "form-control" %>
            <%= f.input :password, label: false, placeholder: "登录密码", required: false, class: "form-control" %>
            <%= f.input :remember_me, label: false, inline_label: "记住我", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "登录", class: "btn-login" %>
          </div>
        <% end %>
      </div>
      <div class="btn-signup">
        <%= link_to "还没有账号？注册", new_registration_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
