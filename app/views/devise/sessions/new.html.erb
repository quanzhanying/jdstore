<div class="users-backimg">
  <div class="users-mainbody">

    <div class="users-tips animated bounceInDown">
      你想要的，必将实现。
    </div>

    <div class="users-info animated rubberBand">

      <h2><%= t(".sign_in") %></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions users-reg-btn">
          <%= f.button :submit, t(".sign_in"), class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="users-links">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
