<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-sign-in"></span>账号登录</h2>

      <br>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: "邮箱", label: false %>
          <%= f.input :password, required: false, placeholder: "密码", label: false %>
          <%= f.input :remember_me , label: "记住我", as: :boolean if devise_mapping.rememberable? %>
          <%= link_to "忘记密码？", new_user_password_path, class: "psw" %>
        </div>

        <br>

        <div class="form-actions">
          <%= f.button :submit, "登 录",class: "btn btn-default button" %>
        </div>

        <hr />

        <div class="account">
          <%= link_to "还没有帐号，立即注册", new_user_registration_path %>
        </div>
      <% end %>

    </div>
  </div>
</div>
