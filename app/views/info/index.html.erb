    <div class="col-md-4 proposal-product">
      <h4 style="padding-top:10px;">为您推荐的宝贝</h4>
      <hr />
      <div id="pins" class="transitions-enabled">
        <% Product.limit(6).sort_by{|product| -product.fans.count}.each do |product| %>
          <div class="box " style="padding:0px;">

            <%= link_to product_path(product) do %>
              <% if product.photos.present? %>
                <%= image_tag(product.photos[0].image.url) %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
              <% end %>
            <% end %>

            <div class="fig" >

              <p class="actions">
                  <% if product.quantity.present? && product.quantity > 0 %>
                    <%= link_to("去看看", product_path(product), class: "add-to-cart btn", style: "height:26px;font-size:11px;background-color:rgb(245,190,126);", :method => :get) %>
                  <% else %>
                    已售馨
                  <% end %>

                  <% if product.quantity.present? && product.quantity > 0 %>
                    <%= link_to("加入购物车", add_to_cart_product_path(product), class: "add-to-cart btn ", style: "height:26px;font-size:11px;border-color:rgb(245,190,126);background-color:#fff;color:rgb(245,190,126); ", :method => :post) %>
                  <% else %>
                    已销售一空，无法购买
                  <% end %>

                  <% if user_signed_in? %>
                    <% if !current_user.is_fan_of?(product) %>
                      <%= link_to favorite_product_path(product), :class => "like btn btn-default", style: "height:26px;font-size:11px;border-color:rgb(245,190,126);background-color:rgb(245,190,126); ", method: :post do %>
                        <i class="fa fa-heart fa-lg", style="border-color:#fff;color:#fff;"></i>
                      <% end %>
                    <% else %>
                      <%= link_to unfavorite_product_path(product), :class => "like btn btn-default",style: "height:26px;font-size:11px;border-color:rgb(245,190,126); ", method: :post do %>
                        <i class="fa fa-heart fa-lg", style="color:rgb(245,190,126);"></i>
                      <% end %>
                    <% end %>
                  <% else %>
                    <%= link_to favorite_product_path(product), :class => "like btn btn-default", style: "height:26px;font-size:11px;border-color:rgb(245,190,126)", method: :post do %>
                      <i class="fa fa-heart-o fa-lg", style="color:rgb(245,190,126);"></i>
                    <% end %>
                  <% end %>
              </p>
              <p  style="font-size:12px;text-align:left;padding-left:12px;margin-top:10px;"><%= product.title %></p>
              <p  style="font-size:12px;text-align:left;padding-left:12px;color:#999">￥ <%= product.price %> </p>

            </div>

          </div>
        <% end %>
      </div>
    </div>
